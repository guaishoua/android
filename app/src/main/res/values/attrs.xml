<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--手势密码-->
    <declare-styleable name="GestureLockViewGroup">
        <attr name="color_no_finger_inner_circle" format="color" />
        <attr name="color_no_finger_outer_circle" format="color" />
        <attr name="color_finger_on" format="color" />
        <attr name="color_finger_wrong" format="color" />
        <attr name="count" format="integer" />
        <attr name="tryTimes" format="integer" />
    </declare-styleable>

    <declare-styleable name="SmallChartView">
        <!--折线颜色-->
        <attr name="lineColor" format="color" />
        <!--渐变色的起始颜色-->
        <attr name="gradient_Start_Color" format="color" />
        <!--渐变色的中间颜色-->
        <attr name="gradient_Center_Color" format="color" />
        <!--渐变色的结束颜色-->
        <attr name="gradient_Stop_Color" format="color" />
    </declare-styleable>

    <declare-styleable name="SignSeekBar">
        <attr name="ssb_min" format="float|reference" />
        <attr name="ssb_max" format="float|reference" />
        <attr name="ssb_progress" format="float|reference" />
        <attr name="ssb_is_float_type" format="boolean" />
        <attr name="ssb_track_size" format="dimension|reference" />
        <attr name="ssb_second_track_size" format="dimension|reference" />
        <attr name="ssb_thumb_radius" format="dimension|reference" />
        <attr name="ssb_thumb_radius_on_dragging" format="dimension|reference" />
        <attr name="ssb_track_color" format="color|reference" />
        <attr name="ssb_second_track_color" format="color|reference" />
        <attr name="ssb_thumb_color" format="color|reference" />
        <attr name="ssb_section_count" format="integer|reference" />
        <attr name="ssb_show_section_mark" format="boolean" />
        <attr name="ssb_auto_adjust_section_mark" format="boolean" />
        <attr name="ssb_show_section_text" format="boolean" />
        <attr name="ssb_section_text_size" format="dimension|reference" />
        <attr name="ssb_section_text_color" format="color|reference" />
        <attr name="ssb_section_text_position">
            <enum name="sides" value="0" />
            <enum name="bottom_sides" value="1" />
            <enum name="below_section_mark" value="2" />
        </attr>
        <attr name="ssb_section_text_interval" format="integer" />
        <attr name="ssb_show_thumb_text" format="boolean" />
        <attr name="ssb_thumb_text_size" format="dimension|reference" />
        <attr name="ssb_thumb_text_color" format="color|reference" />
        <attr name="ssb_show_progress_in_float" format="boolean" />
        <attr name="ssb_touch_to_seek" format="boolean" />
        <attr name="ssb_seek_by_section" format="boolean" />
        <attr name="ssb_sign_color" format="color|reference" />
        <attr name="ssb_sign_border_color" format="color|reference" />
        <attr name="ssb_sign_show_border" format="boolean" />
        <attr name="ssb_sign_text_size" format="dimension|reference" />
        <attr name="ssb_sign_border_size" format="dimension|reference" />
        <attr name="ssb_sign_text_color" format="color|reference" />
        <attr name="ssb_anim_duration" format="integer" />
        <attr name="ssb_show_sign" format="boolean" />
        <attr name="ssb_text_space" format="dimension|reference" />
        <attr name="ssb_sides_labels" format="reference" />
        <attr name="ssb_thumb_bg_alpha" format="float|reference" />
        <attr name="ssb_thumb_ratio" format="float|reference" />
        <attr name="ssb_show_thumb_shadow" format="boolean" />
        <attr name="ssb_sign_arrow_autofloat" format="boolean" />
        <attr name="ssb_sign_height" format="dimension|reference" />
        <attr name="ssb_sign_width" format="dimension|reference" />
        <attr name="ssb_sign_arrow_height" format="dimension|reference" />
        <attr name="ssb_sign_arrow_width" format="dimension|reference" />
        <attr name="ssb_sign_round" format="dimension|reference" />
        <attr name="ssb_unusable_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="ExpandView">
        <attr name="titleText" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="AmountView">
        <attr name="default_value" format="integer" />
        <attr name="max_value" format="integer" />
        <attr name="min_value" format="integer" />
        <attr name="change_value" format="integer" />
        <attr name="hint_value" format="string" />
    </declare-styleable>

    <!--节点进度条-->
    <declare-styleable name="nodeProgresssView">
        <!-- 当前进度-->
        <attr name="node_current" format="integer" />
    </declare-styleable>
</resources>