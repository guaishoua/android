<resources xmlns:tools="http://schemas.android.com/tools">

    <!--默认-->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <!--底部虚拟按键的颜色-->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary
        </item>
        <!--全局Activity的跳转动画-->
        <item name="android:windowAnimationStyle">@style/ActivityAnimationStyle</item>
        <item name="android:windowBackground">@color/content_bg_color</item>

        <!--样式主题设置-->
        <item name="QMUIButtonStyle">@style/QMUIRoundButtonCustom</item>
        <item name="QMUITopBarStyle">@style/QMUITopBarCustom</item>
        <item name="QMUICommonListItemViewStyle">@style/QMUICommonListItemViewCustom</item>

        <!--部分控件的颜色覆盖-->
        <item name="qmui_bottom_sheet_button_background">@color/content_bg_color</item>
        <item name="qmui_bottom_sheet_grid_item_bg">@color/content_bg_color_grey</item>
        <item name="qmui_drawable_color_list_pressed_color">@color/color_list_pressed</item>
        <item name="qmui_drawable_color_list_unpressed_color">@color/content_bg_color</item>
    </style>

    <!--启动页-->
    <style name="AppLauncherTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/launcher_screen</item>
    </style>

    <!--全局Activity的跳转动画-->
    <style name="ActivityAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>
