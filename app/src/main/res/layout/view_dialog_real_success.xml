<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@color/color_transparent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_isRadiusAdjustBounds="true"
        app:qmui_radius="@dimen/dp_5">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:src="@mipmap/icon_close" />

        <ImageView
            android:layout_width="@dimen/dp_86"
            android:layout_height="@dimen/dp_59"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_real_success_global" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/submit_success"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14" />

        <TextView
            android:id="@+id/tv_success_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_horizontal"
            android:text="@string/real_success"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12" />

        <TextView
            android:id="@+id/tv_award"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_20"
            android:textColor="@color/text_grey_2"
            android:textSize="@dimen/text_size_sp_12" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</LinearLayout>
