<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_30"
    android:minWidth="@dimen/dp_150"
    android:orientation="horizontal"
    app:qmui_borderColor="@color/color_grey_3"
    app:qmui_borderWidth="@dimen/dp_1"
    app:qmui_radius="@dimen/dp_3">

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
        android:id="@+id/btn_sub"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_2"
        android:background="@null"
        android:gravity="center"
        app:srcCompat="@drawable/icon_sub_grey" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:background="@color/color_grey_3" />

    <EditText
        android:id="@+id/edit_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:background="@color/color_grey_3" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
        android:id="@+id/btn_add"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_2"
        android:background="@null"
        android:gravity="center"
        app:srcCompat="@drawable/icon_add_grey" />
</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>