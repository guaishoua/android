<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                android:id="@+id/rl_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_12"
                android:padding="@dimen/dp_20"
                app:qmui_backgroundColor="@color/content_bg_color"
                app:qmui_radius="@dimen/dp_10">

                <LinearLayout
                    android:id="@+id/ll_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="1"
                        android:background="@color/content_bg_color_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:text="@string/invite_num"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_weight="1"
                        android:background="@color/content_bg_color_grey" />
                </LinearLayout>


                <View
                    android:id="@+id/view_flag"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_50"
                    android:layout_below="@+id/ll_invite"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/view_flag"
                    android:src="@mipmap/img_invited_global" />

                <TextView
                    android:id="@+id/tv_invited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_invite"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_toRightOf="@id/view_flag"
                    android:text="@string/invitation_success"
                    android:textColor="@color/color_button"
                    android:textSize="@dimen/text_size_sp_14" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_invited"
                    android:layout_alignLeft="@+id/tv_invited"
                    android:layout_marginTop="@dimen/dp_f3"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_button"
                    android:textSize="@dimen/text_size_sp_32"
                    tools:text="499" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_invited"
                    android:layout_alignBottom="@id/tv_count"
                    android:layout_marginLeft="@dimen/dp_f3"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@id/tv_count"
                    android:includeFontPadding="false"
                    android:text="äºº"
                    android:textColor="@color/color_button"
                    android:textSize="@dimen/text_size_sp_16" />

            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:orientation="vertical"
                android:padding="@dimen/dp_20"
                app:qmui_backgroundColor="@color/content_bg_color"
                app:qmui_radius="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="1"
                        android:background="@color/content_bg_color_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:text="@string/invite_type"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_weight="1"
                        android:background="@color/content_bg_color_grey" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/invitation_one"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_14" />


                <RelativeLayout
                    android:id="@+id/rl_invitation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/img_invitation"
                        android:maxLines="1"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16"
                        tools:text="2132435" />

                    <include
                        android:id="@+id/img_invitation"
                        layout="@layout/ll_copy_layout" />


                </RelativeLayout>

                <View style="@style/line_french_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:text="@string/invitation_two"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_14" />

                <RelativeLayout
                    android:id="@+id/rl_invitation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_25"
                        android:layout_toLeftOf="@id/img_invitation2"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16"
                        tools:text="www.12lian.comdddddddddd" />

                    <include
                        android:id="@+id/img_invitation2"
                        layout="@layout/ll_copy_layout" />

                </RelativeLayout>

                <View style="@style/line_french_grey" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                    android:id="@+id/bt_poster"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@drawable/gradient_blue_btn_5"
                    android:text="@string/invite_posters"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_sp_16"
                    android:visibility="visible" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:padding="@dimen/dp_20"
                android:visibility="gone"
                app:qmui_backgroundColor="@color/content_bg_color"
                app:qmui_radius="@dimen/dp_10"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="1"
                        android:background="@color/content_bg_color_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:text="@string/invite_rewards"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_weight="1"
                        android:background="@color/content_bg_color_grey" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_rewards"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/curency"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_rewards"
                    android:layout_centerHorizontal="true"
                    android:text="@string/num"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_rewards"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="@string/winning_details"
                    android:textColor="@color/color_default"
                    android:textSize="@dimen/text_size_sp_14" />

                <View
                    android:id="@+id/line"
                    style="@style/line_french_grey"
                    android:layout_below="@+id/tv_currency"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:nestedScrollingEnabled="false" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
