<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_5">

    <TextView
        android:id="@+id/tv_buyorSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/text_size_sp_14"
        tools:text="买入" />

    <TextView
        android:id="@+id/tv_coins_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintLeft_toRightOf="@id/tv_buyorSell"
        tools:text="BTC/CODE" />

    <TextView
        android:id="@+id/tv_date_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="left"
        android:text="@string/date"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_deal_singleprice_title"
        app:layout_constraintTop_toBottomOf="@id/tv_buyorSell" />

    <TextView
        android:id="@+id/tv_deal_singleprice_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="right"
        android:text="@string/deal_single_price"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_date_title"
        app:layout_constraintRight_toLeftOf="@+id/tv_deal_number_title"
        app:layout_constraintTop_toTopOf="@+id/tv_date_title" />

    <TextView
        android:id="@+id/tv_deal_number_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/vol"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_deal_singleprice_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_date_title" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_deal_singleprice"
        app:layout_constraintTop_toBottomOf="@id/tv_date_title"
        tools:text="04-04 12:56" />

    <TextView
        android:id="@+id/tv_deal_singleprice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:text="1.22222"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_date"
        app:layout_constraintRight_toLeftOf="@+id/tv_deal_number"
        app:layout_constraintTop_toTopOf="@+id/tv_date" />

    <TextView
        android:id="@+id/tv_deal_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_deal_singleprice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_date"
        tools:text="2222" />

    <TextView
        android:id="@+id/tv_deal_price_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="left"
        android:text="@string/deal_price"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_fee_title"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />

    <TextView
        android:id="@+id/tv_fee_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="right"
        android:text="@string/fee"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_deal_price_title"
        app:layout_constraintRight_toLeftOf="@+id/space_view"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />

    <TextView
        android:id="@+id/tv_deal_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_fee"
        app:layout_constraintTop_toBottomOf="@id/tv_deal_price_title"
        tools:text="111" />

    <TextView
        android:id="@+id/tv_fee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_deal_price"
        app:layout_constraintRight_toLeftOf="@+id/space_view"
        app:layout_constraintTop_toBottomOf="@id/tv_deal_price_title"
        tools:text="111" />

    <Space
        android:id="@+id/space_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_fee"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_deal_price_title" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/color_grey_3"
        app:layout_constraintTop_toBottomOf="@id/tv_deal_price" />
</android.support.constraint.ConstraintLayout>