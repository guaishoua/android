<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_currencyid_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                app:srcCompat="@drawable/icon_currencyid_get" />

            <TextView
                android:id="@+id/tv_currencyid_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_60"
            android:background="@color/content_bg_color_grey" />

        <LinearLayout
            android:id="@+id/lin_currencyid_take"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                app:srcCompat="@drawable/icon_currencyid_take" />

            <TextView
                android:id="@+id/tv_currencyid_take"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_60"
            android:background="@color/content_bg_color_grey" />

        <LinearLayout
            android:id="@+id/lin_basecurrencyid_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                app:srcCompat="@drawable/icon_basecurrencyid_get" />

            <TextView
                android:id="@+id/tv_basecurrencyid_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_60"
            android:background="@color/content_bg_color_grey" />

        <LinearLayout
            android:id="@+id/lin_basecurrencyid_take"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                app:srcCompat="@drawable/icon_basecurrencyid_take" />

            <TextView
                android:id="@+id/tv_basecurrencyid_take"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginVertical="@dimen/dp_10"
        android:background="@color/content_bg_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_hand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                app:srcCompat="@drawable/icon_hand" />

            <TextView
                android:id="@+id/tv_hand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_60"
            android:background="@color/content_bg_color_grey" />

        <LinearLayout
            android:id="@+id/lin_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:src="@drawable/icon_pwd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/trade_pwd_setting"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_60"
            android:background="@color/content_bg_color_grey" />

        <LinearLayout
            android:id="@+id/lin_history_deal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                app:srcCompat="@drawable/icon_history_deal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/history_deal"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_60"
            android:background="@color/content_bg_color_grey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_20" />
    </LinearLayout>
</LinearLayout>