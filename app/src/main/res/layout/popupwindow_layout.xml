<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_transparent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        android:gravity="center"
        android:minHeight="@dimen/dp_200"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_borderColor="@color/color_grey_3"
        app:qmui_borderWidth="@dimen/dp_1"
        app:qmui_isRadiusAdjustBounds="true"
        app:qmui_radius="@dimen/dp_4">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/ll_add_coins_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_transparent"
                android:drawableLeft="@mipmap/icon_add_addresss"
                android:enabled="false"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/btn_common_add_new_address"
                android:textColor="@color/color_grey_2"
                android:textSize="@dimen/text_size_sp_14" />

        </LinearLayout>

    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</LinearLayout>