<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profit"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profit_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_golden"
        android:textSize="@dimen/text_size_sp_12"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_profit"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="锁仓中" />

    <TextView
        android:id="@+id/tv_lock_chex_num_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/lock_chex_num"
        android:textColor="@color/text_grey_2"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profit" />

    <TextView
        android:id="@+id/tv_lock_chex_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_lock_chex_num_title"
        app:layout_constraintTop_toBottomOf="@id/tv_lock_chex_num_title"
        tools:text="13" />

    <TextView
        android:id="@+id/tv_year_rate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/year_rate"
        android:textColor="@color/text_grey_2"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_lock_chex_num_title"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_lock_chex_num_title"
        app:layout_constraintRight_toLeftOf="@+id/tv_lock_cycle_title" />

    <TextView
        android:id="@+id/tv_year_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_year_rate_title"
        app:layout_constraintTop_toBottomOf="@id/tv_year_rate_title"
        tools:text="12%" />

    <TextView
        android:id="@+id/tv_lock_cycle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_cycle"
        android:textColor="@color/text_grey_2"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_lock_chex_num_title"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_lock_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_lock_cycle_title"
        app:layout_constraintTop_toBottomOf="@id/tv_lock_cycle_title"
        tools:text="6個月" />

    <TextView
        android:id="@+id/tv_lock_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/lock_time"
        android:textColor="@color/text_grey_2"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_lock_chex_num" />

    <TextView
        android:id="@+id/tv_lock_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_lock_time_title"
        app:layout_constraintTop_toBottomOf="@id/tv_lock_time_title"
        tools:text="2018-12-11 09:09:11" />

    <TextView
        android:id="@+id/tv_end_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_end_time"
        android:textColor="@color/text_grey_2"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_lock_time_title"
        app:layout_constraintLeft_toLeftOf="@+id/tv_year_rate" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_end_time_title"
        app:layout_constraintTop_toBottomOf="@id/tv_end_time_title"
        tools:text="2019-12-11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/content_bg_color_grey"
        app:layout_constraintTop_toBottomOf="@+id/tv_lock_time" />
</android.support.constraint.ConstraintLayout>