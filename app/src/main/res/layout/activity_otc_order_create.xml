<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_15">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                app:qmui_backgroundColor="@color/content_bg_color"
                app:qmui_radius="@dimen/dp_3">

                <com.android.tacu.widget.NodeProgressView
                    android:id="@+id/node_progress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:background="@color/content_bg_color"
                    android:paddingHorizontal="@dimen/dp_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:node_current="1" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

            <include layout="@layout/view_otc_order_money" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_10"
                app:qmui_backgroundColor="@color/content_bg_color"
                app:qmui_radius="@dimen/dp_3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/please_choose_get_pay"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <TextView
                    android:id="@+id/tv_pay_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/icon_expand_more_grey"
                    android:text="@string/please_choose_pay_method"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_17" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_xieyi"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@drawable/checkbox_rect_default"
                    android:button="@null"
                    android:checked="false" />

                <TextView
                    android:id="@+id/tv_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_13"
                    tools:text="@string/otc_xieyi" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_13"
                tools:text="@string/otc_order_create_countdown2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:text="@string/confirm_create_order"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:qmui_backgroundColor="@color/color_default"
                    app:qmui_radius="@dimen/dp_3" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:qmui_backgroundColor="@color/color_otc_giveup"
                    app:qmui_radius="@dimen/dp_3" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:lineSpacingExtra="@dimen/dp_3"
                android:text="@string/otc_order_confirmed_tip"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_13" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>