<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@color/content_bg_color"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_ok"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_70"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_ok"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/icon_check_box_outline" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_coins_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            android:textStyle="bold"
            tools:text="RTS" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_vol_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vol"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/tv_vol_title"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_12"
                tools:text="212.00001234" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_20">

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@+id/img_drag"
            android:background="@mipmap/icon_top" />

        <ImageView
            android:id="@+id/img_drag"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_drag" />
    </RelativeLayout>
</LinearLayout>