<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:background="@color/content_bg_color"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/view_mim1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tab_min1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/min_1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12" />

        <View
            android:id="@+id/indicator_min1"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_default"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_mim15"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tab_min15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/min_15"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12" />

        <View
            android:id="@+id/indicator_min15"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_default"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_hour1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tab_hour1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/hour_1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12" />

        <View
            android:id="@+id/indicator_hour1"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_default"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_day1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tab_day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/day_1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12" />

        <View
            android:id="@+id/indicator_day1"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_default"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_more"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tab_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/more"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12" />

        <View
            android:id="@+id/indicator_more"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_default"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/dp_13"
        android:background="@color/color_grey" />

    <RelativeLayout
        android:id="@+id/view_setting"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/icon_kline_setting" />
    </RelativeLayout>
</LinearLayout>