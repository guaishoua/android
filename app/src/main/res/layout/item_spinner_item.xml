<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_coins_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22"
        android:layout_centerVertical="true"
        android:gravity="bottom|start"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_6"
        android:singleLine="true"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        tools:text="DLC地址" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_coins_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_40"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12"
            tools:text="lll坎坎坷坷扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩坎坎坷" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/icon_delete_grey" />

    </RelativeLayout>

    <View
        style="@style/line_french_grey"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8" />

</LinearLayout>