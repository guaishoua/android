<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:background="@color/content_bg_color"
                    android:paddingHorizontal="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tv_cardholder_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/cardholder_name"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edit_cardholder_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:background="@null"
                        android:hint="@string/please_input_username"
                        android:maxLines="1"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_16"
                        app:layout_constraintBottom_toBottomOf="@id/tv_cardholder_name_title"
                        app:layout_constraintLeft_toRightOf="@id/tv_cardholder_name_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_cardholder_name_title" />
                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/content_bg_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/bank_name"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14" />

                    <EditText
                        android:id="@+id/edit_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:background="@null"
                        android:hint="@string/please_input_bank_name"
                        android:maxLines="1"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/content_bg_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/open_bank_name"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14" />

                    <EditText
                        android:id="@+id/edit_open_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:background="@null"
                        android:hint="@string/please_input_open_bank_name"
                        android:maxLines="1"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/content_bg_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/bank_id"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14" />

                    <EditText
                        android:id="@+id/edit_bank_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/please_input_bank_id"
                        android:maxLines="1"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_16" />

                    <ImageView
                        android:id="@+id/img_saomiao"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:srcCompat="@drawable/icon_saoma" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15">

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/btn_bindinng"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:text="@string/confirm_binding"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14"
                        app:qmui_backgroundColor="@color/color_default"
                        app:qmui_radius="@dimen/dp_3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="@color/content_bg_color"
                    android:paddingHorizontal="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tv_cardholder_name_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardholder_name"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_cardholder_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_17"
                        app:layout_constraintBottom_toBottomOf="@id/tv_cardholder_name_title1"
                        app:layout_constraintLeft_toRightOf="@id/tv_cardholder_name_title1"
                        app:layout_constraintTop_toTopOf="@id/tv_cardholder_name_title1"
                        tools:text="加隆" />
                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="@color/content_bg_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/bank_name"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_14" />

                    <TextView
                        android:id="@+id/tv_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:background="@null"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="@color/content_bg_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/open_bank_name"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_14" />

                    <TextView
                        android:id="@+id/tv_open_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:background="@null"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="@color/content_bg_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/bank_id"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_14" />

                    <TextView
                        android:id="@+id/tv_bank_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16" />
                </LinearLayout>

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/unbind"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:qmui_backgroundColor="@color/color_otc_giveup"
                    app:qmui_radius="@dimen/dp_3" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>