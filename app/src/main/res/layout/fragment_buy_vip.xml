<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color_grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/lin_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="@color/content_bg_color"
                android:paddingHorizontal="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintWidth_percent="0.55">

                    <TextView
                        android:id="@+id/tv_vip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_14"
                        tools:text="111" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14"
                        tools:text="111" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.45">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vip_cycle"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_sp_14" />

                    <TextView
                        android:id="@+id/tv_vip_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14"
                        tools:text="111" />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/content_bg_color"
                android:paddingHorizontal="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_account_balance_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="@string/account_balance1"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_account_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_account_balance_title"
                    tools:text="111" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                    android:id="@+id/btn_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text="@string/click_recharge"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/lin_vip_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/content_bg_color"
                android:gravity="center_horizontal"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:text="@string/vip_good_1"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:text="@string/vip_good_2"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_need_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/content_bg_color"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nee_pay"
                    android:textColor="@color/color_otc_buy"
                    android:textSize="@dimen/text_size_sp_14" />

                <TextView
                    android:id="@+id/tv_need_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/color_otc_buy"
                    android:textSize="@dimen/text_size_sp_14"
                    tools:text="1111" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_trade_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/content_bg_color"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trade_password"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                    android:id="@+id/edit_trade_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@null"
                    android:hint="@string/please_input_trade_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dp_5"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/vip_kyc_tip"
                android:textColor="@color/text_error"
                android:textSize="@dimen/text_size_sp_13"
                android:visibility="gone" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:qmui_backgroundColor="@color/color_default"
                app:qmui_radius="@dimen/dp_3"
                tools:text="@string/go_auth" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingHorizontal="@dimen/dp_15"
                android:text="@string/vip_tip"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_13" />
        </LinearLayout>

        <include
            android:id="@+id/lin_success"
            layout="@layout/view_vip_success"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>