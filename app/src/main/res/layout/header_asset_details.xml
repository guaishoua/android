<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/margin_account_acu"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_13" />

            <TextView
                android:id="@+id/tv_margin_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size_sp_19"
                tools:text="111" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_take"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10"
                android:text="@string/deposit_take"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_13"
                app:qmui_backgroundColor="@color/color_default"
                app:qmui_radius="@dimen/dp_2" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_recharge"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_26"
                android:paddingHorizontal="@dimen/dp_10"
                android:text="@string/deposit_recharge"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_13"
                app:qmui_borderColor="@color/text_default"
                app:qmui_borderWidth="@dimen/dp_1"
                app:qmui_radius="@dimen/dp_2" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/content_bg_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_all_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/all_amount"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12" />

        <TextView
            android:id="@+id/tv_all_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:includeFontPadding="false"
            android:textColor="@color/text_default"
            android:textSize="@dimen/text_size_sp_18"
            tools:text="111" />

        <TextView
            android:id="@+id/tv_otc_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:includeFontPadding="false"
            android:text="@string/otc_account"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_12" />

        <TextView
            android:id="@+id/tv_otc_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:includeFontPadding="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_16"
            tools:text="111" />

        <TextView
            android:id="@+id/tv_coin_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="@string/coin_account"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_12" />

        <TextView
            android:id="@+id/tv_coin_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:includeFontPadding="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_16"
            tools:text="111" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/content_bg_color_grey" />

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            app:srcCompat="@drawable/icon_search_white" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_76"
            android:layout_toLeftOf="@+id/cb_search"
            android:background="@null"
            android:hint="@string/search_coin"
            android:paddingLeft="@dimen/dp_30"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="@dimen/text_size_sp_12"
            app:qmui_borderColor="@color/text_color"
            app:qmui_borderWidth="@dimen/dp_1"
            app:qmui_radius="@dimen/dp_3" />

        <CheckBox
            android:id="@+id/cb_search"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/tv_serach"
            android:background="@drawable/checkbox_square"
            android:button="@null" />

        <TextView
            android:id="@+id/tv_serach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/asset_search"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12" />
    </RelativeLayout>
</LinearLayout>