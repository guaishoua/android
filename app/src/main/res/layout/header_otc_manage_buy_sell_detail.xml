<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color_grey"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:gravity="center_vertical"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_radius="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            tools:text="54000" />

        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_13"
            app:srcCompat="@drawable/ic_content_switch" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            tools:text="1000" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_radius="@dimen/dp_3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/single_price2"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_single_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/single_limit_range"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_single_limit_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/finished_trade"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_finished_trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/success_buy"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_success_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/pay_after2"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_pay_after2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/surplus_total"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_surplus_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/yhk_pay"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_yhk_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/wx_pay"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_wx_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/zfb_pay"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_zfb_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/failure_trade"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_failure_trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/fee_send"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_fee_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                tools:text="111" />
        </RelativeLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@color/content_bg_color"
        android:paddingHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wait_deal_matter"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_16" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/icon_arrow_right"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_16"
            android:text="@string/record" />
    </RelativeLayout>
</LinearLayout>