<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color">

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_20">

            <LinearLayout
                android:id="@+id/ll_asset"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/img_reward_assets"
                android:orientation="vertical"
                app:layout_constraintDimensionRatio="h,3.7:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/reward_total_asset"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_sp_12" />

                <TextView
                    android:id="@+id/tv_reward_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_sp_24"
                    tools:text="500 CHEX" />

                <TextView
                    android:id="@+id/tv_reward_conversion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_sp_12"
                    tools:text="=123456" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/img_yinying"
                app:layout_constraintBottom_toBottomOf="@id/ll_asset" />

            <TextView
                android:id="@+id/tv_shanxibao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/shanxibao"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_asset" />

            <ImageView
                android:id="@+id/img_describe_shanxibao"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_1"
                android:padding="@dimen/dp_2"
                app:layout_constraintLeft_toRightOf="@id/tv_shanxibao"
                app:layout_constraintTop_toTopOf="@id/tv_shanxibao"
                app:srcCompat="@drawable/icon_describe_golden" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                android:id="@+id/tv_shanxibao_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/interest_record"
                android:textColor="@color/text_golden"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_shanxibao"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_shanxibao" />

            <TextView
                android:id="@+id/tv_interest_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/interest_history_chex"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_shanxibao" />

            <TextView
                android:id="@+id/tv_interest_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_interest_history_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="100000.999CHEX" />

            <TextView
                android:id="@+id/tv_yesterday_asset_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/yesterday_asset_usdt"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_interest_history_title" />

            <TextView
                android:id="@+id/tv_yesterday_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_yesterday_asset_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="344.999USDT" />

            <TextView
                android:id="@+id/tv_yesterday_interest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/yesterday_interest_chex"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_yesterday_asset_title" />

            <TextView
                android:id="@+id/tv_yesterday_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_yesterday_interest_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="200.999USDT" />

            <TextView
                android:id="@+id/tv_chex_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/chex_price_usdt"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_yesterday_interest_title" />

            <TextView
                android:id="@+id/tv_chex_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_chex_price_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="0.999USDT" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_shanxibao_receive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:enabled="false"
                android:text="@string/receive"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintTop_toBottomOf="@id/tv_chex_price_title"
                app:qmui_backgroundColor="@color/color_grey_2"
                app:qmui_radius="@dimen/dp_3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintTop_toBottomOf="@id/btn_shanxibao_receive" />

            <TextView
                android:id="@+id/tv_wenxibao"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_45"
                android:text="@string/wenxibao"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_shanxibao_receive" />

            <ImageView
                android:id="@+id/img_describe_wenxibao"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_1"
                android:padding="@dimen/dp_2"
                app:layout_constraintLeft_toRightOf="@id/tv_wenxibao"
                app:layout_constraintTop_toTopOf="@id/tv_wenxibao"
                app:srcCompat="@drawable/icon_describe_golden" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                android:id="@+id/tv_wenxibao_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/lock_record"
                android:textColor="@color/text_golden"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_wenxibao"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_wenxibao" />

            <TextView
                android:id="@+id/tv_lock_profit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/lock_profit_chex"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_wenxibao" />

            <TextView
                android:id="@+id/tv_lock_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_lock_profit_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="10000" />

            <TextView
                android:id="@+id/tv_lock_profit_expect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/lock_profit_chex"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_lock_profit_title" />

            <TextView
                android:id="@+id/tv_lock_profit_expect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_lock_profit_expect_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="10000" />

            <TextView
                android:id="@+id/tv_half_year_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/half_year_profit"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_lock_profit_expect_title" />

            <TextView
                android:id="@+id/tv_half_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_half_year_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="10" />

            <TextView
                android:id="@+id/tv_one_year_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/one_year_profit"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_half_year_title" />

            <TextView
                android:id="@+id/tv_one_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_one_year_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="20" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_wenxibao_receive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:text="@string/apply_lock"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintTop_toBottomOf="@id/tv_one_year_title"
                app:qmui_backgroundColor="@color/color_golden"
                app:qmui_radius="@dimen/dp_3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintTop_toBottomOf="@id/btn_wenxibao_receive" />

            <TextView
                android:id="@+id/tv_history_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_45"
                android:text="@string/history_activity"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_wenxibao_receive" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_history_activity" />

            <TextView
                android:id="@+id/tv_node_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_35"
                android:text="@string/node_manage"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_history_activity" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                android:id="@+id/tv_activity_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/detail"
                android:textColor="@color/text_golden"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_node_manage"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_total_profit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/node_total_profit"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_node_manage" />

            <TextView
                android:id="@+id/tv_total_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_total_profit_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="1000000CHEX" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>