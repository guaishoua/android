<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/content_bg_color"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_interest_history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:includeFontPadding="false"
            android:text="@string/interest_history"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_interest_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_interest_history_title"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@id/tv_interest_history_title"
            android:includeFontPadding="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12"
            android:textStyle="bold"
            tools:text="1000000CHEX" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/content_bg_color_grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:includeFontPadding="false"
        android:text="@string/interest_record"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_16"
        android:textStyle="bold" />
</LinearLayout>