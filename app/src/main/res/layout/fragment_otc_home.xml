<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/content_bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:elevation="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll">

                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/banner_home"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/content_bg_color"
                    android:gravity="bottom"
                    app:AutoPlayTime="5000"
                    app:bannerBottomMargin="0dp"
                    app:clipChildrenLeftRightMargin="0dp"
                    app:clipChildrenTopBottomMargin="0dp"
                    app:isAutoPlay="true"
                    app:isClipChildrenMode="true"
                    app:isClipChildrenModeLessThree="true"
                    app:isHandLoop="true"
                    app:isShowIndicatorOnlyOne="true"
                    app:isShowNumberIndicator="false"
                    app:isShowTips="true"
                    app:layout_constraintDimensionRatio="W,1:3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:pageChangeDuration="200"
                    app:pointContainerPosition="BOTTOM"
                    app:pointNormal="@drawable/banner_indicator_unselect"
                    app:pointSelect="@drawable/banner_indicator_select"
                    app:pointTopBottomPadding="@dimen/dp_3"
                    app:pointsContainerBackground="@color/color_transparent"
                    app:pointsPosition="CENTER"
                    app:viewpagerMargin="@dimen/dp_4" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@color/content_bg_color">

                <RelativeLayout
                    android:id="@+id/rl_acu"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:paddingHorizontal="@dimen/dp_2"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <TextView
                        android:id="@+id/tv_acu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="ACU"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16" />

                    <View
                        android:id="@+id/view_acu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_usdt"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/dp_2"
                    app:layout_constraintLeft_toRightOf="@+id/rl_acu">

                    <TextView
                        android:id="@+id/tv_usdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="USDT"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16" />

                    <View
                        android:id="@+id/view_usdt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_btc"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/dp_2"
                    app:layout_constraintLeft_toRightOf="@+id/rl_usdt">

                    <TextView
                        android:id="@+id/tv_btc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="BTC"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16" />

                    <View
                        android:id="@+id/view_btc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_c2c"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/tv_c2c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="C2C"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16" />

                    <ImageView
                        android:id="@+id/img_c2c"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        app:srcCompat="@drawable/icon_arrow_right" />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintBottom_toBottomOf="parent" />
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>