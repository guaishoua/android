<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/color_grey">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical"
        app:qmui_backgroundColor="@color/color_white"
        app:qmui_radiusTopLeft="@dimen/dp_5"
        app:qmui_radiusTopRight="@dimen/dp_5"
        tools:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="horizontal">


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_wheel_cancel"
                android:layout_width="@dimen/dp_88"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_sp_14"
                app:qmui_backgroundColor="@color/color_grey_2"
                app:qmui_radius="@dimen/dp_2" />


            <TextView
                android:id="@+id/tv_wheel_base_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_sp_16"
                tools:text="USDT" />


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_wheel_confirm"
                android:layout_width="@dimen/dp_88"
                android:layout_height="match_parent"
                android:text="@string/confirm"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_sp_14"
                app:qmui_backgroundColor="@color/color_default"
                app:qmui_radius="@dimen/dp_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_weight="1"
            android:orientation="vertical" >


            <com.zyyoona7.wheel.WheelView
                android:id="@+id/wheel_view_target"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:wv_cyclic="false"
                app:wv_lineSpacing="@dimen/dp_8"
                app:wv_normalItemTextColor="@color/color_grey_3"
                app:wv_selectedItemTextColor="@color/color_default"
                app:wv_textSize="@dimen/text_size_sp_18" />

        </LinearLayout>


    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


</FrameLayout>