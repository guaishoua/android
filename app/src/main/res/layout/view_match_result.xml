<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_result_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_match_result_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_result_match_title1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_60"
            android:includeFontPadding="false"
            android:text="@string/match_title1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_result_match_title2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/match_title2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_35"
            app:layout_constraintLeft_toLeftOf="@id/tv_result_match_title1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_result_match_title1" />

        <TextView
            android:id="@+id/tv_result_match_title3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/match_title3"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_35"
            app:layout_constraintLeft_toLeftOf="@id/tv_result_match_title2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_result_match_title2" />

        <ImageView
            android:id="@+id/img_result_tag1"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_25"
            android:scaleType="fitXY"
            android:src="@mipmap/img_match_tag1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result_match_title3" />

        <TextView
            android:id="@+id/tv_result_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/match_tag1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_20"
            app:layout_constraintLeft_toLeftOf="@id/img_result_tag1"
            app:layout_constraintTop_toBottomOf="@id/img_result_tag1" />

        <ImageView
            android:id="@+id/img_result_flag1"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@mipmap/img_match_flag"
            app:layout_constraintBottom_toBottomOf="@id/tv_result_tag1"
            app:layout_constraintLeft_toRightOf="@id/tv_result_tag1"
            app:layout_constraintTop_toTopOf="@id/tv_result_tag1" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_40"
            android:background="#6746BB"
            app:layout_constraintBottom_toBottomOf="@id/tv_result_tag1"
            app:layout_constraintLeft_toRightOf="@+id/img_result_flag1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_result_tag1" />

        <TextView
            android:id="@+id/tv_result_tag1_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:includeFontPadding="false"
            android:text="@string/match_tag1_text1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="@id/tv_result_tag1"
            app:layout_constraintTop_toBottomOf="@id/tv_result_tag1" />

        <TextView
            android:id="@+id/tv_result_tag1_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_40"
            android:includeFontPadding="false"
            android:text="@string/matchresult_tag1_text2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="@id/tv_result_tag1_text1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result_tag1_text1" />

        <TextView
            android:id="@+id/tv_result_tag1_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_38"
            android:includeFontPadding="false"
            android:text="@string/match_tag1_text2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_19"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result_tag1_text2" />

        <TextView
            android:id="@+id/tv_result_tag1_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/match_tag1_text3"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_19"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result_tag1_text3" />

        <ImageView
            android:id="@+id/img_result_tag2"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_28"
            android:scaleType="fitXY"
            android:src="@mipmap/img_match_tag2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result_tag1_text4" />

        <TextView
            android:id="@+id/tv_result_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/matchresult_tag2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_20"
            app:layout_constraintLeft_toLeftOf="@id/img_result_tag2"
            app:layout_constraintTop_toBottomOf="@id/img_result_tag2" />

        <ImageView
            android:id="@+id/img_result_flag2"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@mipmap/img_match_flag"
            app:layout_constraintBottom_toBottomOf="@id/tv_result_tag2"
            app:layout_constraintLeft_toRightOf="@id/tv_result_tag2"
            app:layout_constraintTop_toTopOf="@id/tv_result_tag2" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_40"
            android:background="#6746BB"
            app:layout_constraintBottom_toBottomOf="@id/tv_result_tag2"
            app:layout_constraintLeft_toRightOf="@+id/img_result_flag2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_result_tag2" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_324"
            android:layout_marginHorizontal="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_13"
            app:layout_constraintTop_toBottomOf="@id/tv_result_tag2" />

        <ImageView
            android:id="@+id/img_result_tag3"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_34"
            android:scaleType="fitXY"
            android:src="@mipmap/img_match_tag2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler1" />

        <TextView
            android:id="@+id/tv_result_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/matchreslut_tag3"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_20"
            app:layout_constraintLeft_toLeftOf="@id/img_result_tag3"
            app:layout_constraintTop_toBottomOf="@id/img_result_tag3" />

        <ImageView
            android:id="@+id/img_result_flag3"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@mipmap/img_match_flag"
            app:layout_constraintBottom_toBottomOf="@id/tv_result_tag3"
            app:layout_constraintLeft_toRightOf="@id/tv_result_tag3"
            app:layout_constraintTop_toTopOf="@id/tv_result_tag3" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_40"
            android:background="#6746BB"
            app:layout_constraintBottom_toBottomOf="@id/tv_result_tag3"
            app:layout_constraintLeft_toRightOf="@+id/img_result_flag3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_result_tag3" />

        <TextView
            android:id="@+id/tv_result_tag3_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/matchreslut_tag3_text1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_result_tag3_text2"
            app:layout_constraintTop_toBottomOf="@+id/tv_result_tag3" />

        <TextView
            android:id="@+id/tv_result_tag3_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/matchreslut_tag3_text2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_15"
            app:layout_constraintBottom_toBottomOf="@+id/tv_result_tag3_text1"
            app:layout_constraintLeft_toRightOf="@+id/tv_result_tag3_text1"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginHorizontal="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_13"
            app:layout_constraintTop_toBottomOf="@id/tv_result_tag3_text1" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_result_end_close"
            android:layout_width="@dimen/dp_167"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="@string/closed"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler2"
            app:qmui_backgroundColor="@color/color_match"
            app:qmui_radius="@dimen/dp_3" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>