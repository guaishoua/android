<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_end_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_match_end_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_end_match_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_60"
        android:includeFontPadding="false"
        android:text="@string/match_title1"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_end_match_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/match_title2"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_35"
        app:layout_constraintLeft_toLeftOf="@id/tv_end_match_title1"
        app:layout_constraintTop_toBottomOf="@+id/tv_end_match_title1" />

    <TextView
        android:id="@+id/tv_end_match_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/match_title3"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_35"
        app:layout_constraintLeft_toLeftOf="@id/tv_end_match_title2"
        app:layout_constraintTop_toBottomOf="@+id/tv_end_match_title2" />

    <ImageView
        android:id="@+id/img_end_tag1"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_25"
        android:scaleType="fitXY"
        android:src="@mipmap/img_match_tag1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end_match_title3" />

    <TextView
        android:id="@+id/tv_end_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/match_tag1"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_20"
        app:layout_constraintLeft_toLeftOf="@id/img_end_tag1"
        app:layout_constraintTop_toBottomOf="@id/img_end_tag1" />

    <ImageView
        android:id="@+id/img_end_flag1"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@mipmap/img_match_flag"
        app:layout_constraintBottom_toBottomOf="@id/tv_end_tag1"
        app:layout_constraintLeft_toRightOf="@id/tv_end_tag1"
        app:layout_constraintTop_toTopOf="@id/tv_end_tag1" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_40"
        android:background="#6746BB"
        app:layout_constraintBottom_toBottomOf="@id/tv_end_tag1"
        app:layout_constraintLeft_toRightOf="@+id/img_end_flag1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_end_tag1" />

    <TextView
        android:id="@+id/tv_end_tag1_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:includeFontPadding="false"
        android:text="@string/match_tag1_text1"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintLeft_toLeftOf="@id/tv_end_tag1"
        app:layout_constraintTop_toBottomOf="@id/tv_end_tag1" />

    <TextView
        android:id="@+id/tv_end_tag1_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_120"
        android:includeFontPadding="false"
        android:text="@string/match_tag1_text2"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_19"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end_tag1_text1" />

    <TextView
        android:id="@+id/tv_end_tag1_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/match_tag1_text3"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_19"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end_tag1_text2" />

    <ImageView
        android:id="@+id/img_end_tag2"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_41"
        android:layout_marginTop="@dimen/dp_25"
        android:scaleType="fitXY"
        android:src="@mipmap/img_match_tag2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end_tag1_text3" />

    <TextView
        android:id="@+id/tv_end_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/match_tag2"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_20"
        app:layout_constraintLeft_toLeftOf="@id/img_end_tag2"
        app:layout_constraintTop_toBottomOf="@id/img_end_tag2" />

    <ImageView
        android:id="@+id/img_end_flag2"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@mipmap/img_match_flag"
        app:layout_constraintBottom_toBottomOf="@id/tv_end_tag2"
        app:layout_constraintLeft_toRightOf="@id/tv_end_tag2"
        app:layout_constraintTop_toTopOf="@id/tv_end_tag2" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_40"
        android:background="#6746BB"
        app:layout_constraintBottom_toBottomOf="@id/tv_end_tag2"
        app:layout_constraintLeft_toRightOf="@+id/img_end_flag2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_end_tag2" />

    <TextView
        android:id="@+id/tv_end_tag2_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_70"
        android:includeFontPadding="false"
        android:text="@string/match_tag2_text1"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end_tag2" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_end_close"
        android:layout_width="@dimen/dp_167"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/closed"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end_tag2_text1"
        app:qmui_backgroundColor="#7653CF"
        app:qmui_radius="@dimen/dp_3" />
</android.support.constraint.ConstraintLayout>