<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:paddingHorizontal="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_account_balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/total_margin_balance"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_balance_title"
            tools:text="1234" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_5"
            android:paddingVertical="@dimen/dp_3"
            android:text="@string/margin_account_record"
            android:textColor="@color/text_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:qmui_borderColor="@color/color_default"
            app:qmui_borderWidth="@dimen/dp_1"
            app:qmui_radius="@dimen/dp_1" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/content_bg_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/shop_margin"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/buiness_freeze"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/operational_balance"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_margin_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="111" />

        <TextView
            android:id="@+id/tv_frozen_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="111" />

        <TextView
            android:id="@+id/tv_available_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="111" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="@color/content_bg_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_account_balance"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_13" />

        <TextView
            android:id="@+id/tv_total_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_15"
            tools:text="111" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/content_bg_color_grey" />

    <com.shizhefei.view.indicator.ScrollIndicatorView
        android:id="@+id/coin_indicatorView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/tab_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/available_balance1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14" />

        <TextView
            android:id="@+id/tv_total_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_18"
            tools:text="111" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/content_bg_color_grey" />

    <com.shizhefei.view.indicator.ScrollIndicatorView
        android:id="@+id/type_indicatorView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/tab_bg_color" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_27"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_sp_12"
        tools:text="@string/recharge_deposit_tag1" />

    <RelativeLayout
        android:id="@+id/rl_recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:visibility="gone">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundTextView
            android:id="@+id/tv_recharge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_13"
            app:qmui_borderColor="@color/color_grey"
            app:qmui_borderWidth="@dimen/dp_1"
            app:qmui_radius="@dimen/dp_3" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/icon_arrow_down_white" />
    </RelativeLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:id="@+id/lin_take"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:visibility="gone"
        app:qmui_borderColor="@color/color_grey"
        app:qmui_borderWidth="@dimen/dp_1"
        app:qmui_radius="@dimen/dp_3">

        <EditText
            android:id="@+id/edit_take"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789."
            android:hint="@string/please_input_deposit_amount"
            android:inputType="number"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/text_size_sp_13" />

        <TextView
            android:id="@+id/tv_coinname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_13"
            tools:text="ACU" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/color_grey" />

        <com.qmuiteam.qmui.alpha.QMUIAlphaButton
            android:id="@+id/btn_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minWidth="0dp"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="@string/all_take"
            android:textColor="@color/text_default"
            android:textSize="@dimen/text_size_sp_13" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

    <TextView
        android:id="@+id/tv_deposit_take_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/deposit_take_amount"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_sp_12"
        android:visibility="gone" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginHorizontal="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_35"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_17"
        app:qmui_backgroundColor="@color/color_default"
        app:qmui_radius="@dimen/dp_3"
        tools:text="@string/confirm_recharge" />
</LinearLayout>