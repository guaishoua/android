<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color">

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_20">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/img_lock"
                app:layout_constraintDimensionRatio="h,2.1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_lock_profit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:includeFontPadding="false"
                    android:text="@string/lock_profit"
                    android:textColor="@color/text_grey_5"
                    android:textSize="@dimen/text_size_sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_describe"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_toRightOf="@id/tv_asset_hint"
                    android:padding="@dimen/dp_2"
                    app:layout_constraintLeft_toRightOf="@+id/tv_lock_profit_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_describe_white" />

                <TextView
                    android:id="@+id/tv_lock_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_sp_24"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_lock_profit_title"
                    tools:text="500 CHEX" />

                <TextView
                    android:id="@+id/tv_yourchex_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_sp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_lock_profit"
                    tools:text="@string/your_chex_lock_num" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_75"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_10"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/haved_profit_chex"
                            android:textColor="@color/text_grey_5"
                            android:textSize="@dimen/text_size_sp_12" />

                        <TextView
                            android:id="@+id/tv_have_profit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_size_sp_14"
                            tools:text="1.000000000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prediction_profit_chex"
                            android:textColor="@color/text_grey_5"
                            android:textSize="@dimen/text_size_sp_12" />

                        <TextView
                            android:id="@+id/tv_prediction_profit_chex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_size_sp_14"
                            tools:text="1.000000000000" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/img_yinying"
                app:layout_constraintBottom_toBottomOf="@id/contentLayout" />

            <TextView
                android:id="@+id/tv_use_chex_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/can_use_chex"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contentLayout" />

            <TextView
                android:id="@+id/tv_use_chex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_use_chex_title"
                tools:text="0.00000CHEX" />

            <EditText
                android:id="@+id/edit_input_lock_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_50"
                android:background="@null"
                android:hint="@string/input_lock_num"
                android:inputType="number"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintTop_toBottomOf="@id/tv_use_chex" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_30"
                android:text="@string/wan"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="@id/edit_input_lock_num"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_input_lock_num" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:text="@string/lock_tip"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_input_lock_num" />

            <TextView
                android:id="@+id/tv_lock_cycle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_50"
                android:text="@string/lock_cycle"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_input_lock_num" />

            <RadioGroup
                android:id="@+id/rdGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_30"
                android:orientation="horizontal"
                android:padding="@dimen/dp_2"
                app:layout_constraintBottom_toBottomOf="@id/tv_lock_cycle_title"
                app:layout_constraintRight_toRightOf="parent">

                <RadioButton
                    android:id="@+id/rb_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/radiobutton_selector"
                    android:drawablePadding="@dimen/dp_5"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/month_12"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_12"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rb_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/radiobutton_selector"
                    android:drawablePadding="@dimen/dp_5"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/month_6"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_12"
                    android:textStyle="bold" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_year_rate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/year_rate"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_lock_cycle_title" />

            <TextView
                android:id="@+id/tv_year_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_30"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_year_rate_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="12%" />

            <TextView
                android:id="@+id/tv_prediction_profit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/prediction_profit_chex"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_year_rate_title" />

            <TextView
                android:id="@+id/tv_prediction_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_30"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_prediction_profit_title"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="400CHEX" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                android:id="@+id/edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:paddingRight="@dimen/dp_7"
                android:background="@null"
                android:hint="@string/enter_trading_password"
                android:inputType="textPassword"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_prediction_profit_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_pwd" />


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:enabled="false"
                android:text="@string/node_apply_text"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintTop_toBottomOf="@id/edit_pwd"
                app:qmui_backgroundColor="@color/color_grey_2"
                app:qmui_radius="@dimen/dp_3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:lineSpacingExtra="@dimen/dp_3"
                android:text="@string/apply_lock_tip"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_apply" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>