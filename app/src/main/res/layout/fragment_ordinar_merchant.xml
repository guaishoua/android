<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:background="@color/content_bg_color"
            android:paddingHorizontal="@dimen/dp_15">

            <ImageView
                android:id="@+id/img_membership"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/icon_auth_success" />

            <TextView
                android:id="@+id/tv_membership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/member_ship"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_membership"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_membership_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buy_member"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/content_bg_color"
            android:paddingHorizontal="@dimen/dp_15">

            <ImageView
                android:id="@+id/img_binding"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/icon_auth_success" />

            <TextView
                android:id="@+id/tv_binding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/binding_tel_email"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_binding"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_binding_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_binding"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/content_bg_color"
            android:paddingHorizontal="@dimen/dp_15">

            <ImageView
                android:id="@+id/img_asset"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/icon_auth_success" />

            <TextView
                android:id="@+id/tv_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/net_assets_dayu"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_asset"
                app:layout_constraintTop_toTopOf="parent" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_asset_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/go_recharge"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:qmui_borderColor="@color/text_default"
                app:qmui_borderWidth="@dimen/dp_1"
                app:qmui_radius="@dimen/dp_1" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/content_bg_color"
            android:paddingHorizontal="@dimen/dp_15">

            <ImageView
                android:id="@+id/img_kyc"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/icon_auth_success" />

            <TextView
                android:id="@+id/tv_kyc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/kyc_60_day"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_kyc"
                app:layout_constraintTop_toTopOf="parent" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_kyc_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/go_auth"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:qmui_borderColor="@color/text_default"
                app:qmui_borderWidth="@dimen/dp_1"
                app:qmui_radius="@dimen/dp_1" />

            <TextView
                android:id="@+id/tv_kyc_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/text_error"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/btn_kyc_right"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="111" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/content_bg_color"
            android:paddingHorizontal="@dimen/dp_15">

            <ImageView
                android:id="@+id/img_otc"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/icon_auth_success" />

            <TextView
                android:id="@+id/tv_otc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/success_trade_otc_10"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_otc"
                app:layout_constraintTop_toTopOf="parent" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_otc_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/go_trade"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:qmui_borderColor="@color/text_default"
                app:qmui_borderWidth="@dimen/dp_1"
                app:qmui_radius="@dimen/dp_1" />

            <TextView
                android:id="@+id/tv_otc_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/text_error"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/btn_otc_right"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="111" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/content_bg_color"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_10">

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/icon_auth_success" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/video_merchant"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toRightOf="@+id/img_video"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_upload_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/upload_video"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_video"
                app:qmui_backgroundColor="@color/color_default"
                app:qmui_radius="@dimen/dp_1" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_15">

            <CheckBox
                android:id="@+id/cb_xieyi"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@drawable/checkbox_rect_default"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_13"
                tools:text="@string/otc_xieyi" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_15"
            android:text="@string/auth_tip"
            android:textColor="@color/text_error"
            android:textSize="@dimen/text_size_sp_12" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginHorizontal="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="@string/confirm_apply_submit"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_16"
            app:qmui_backgroundColor="@color/color_default"
            app:qmui_radius="@dimen/dp_3" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>