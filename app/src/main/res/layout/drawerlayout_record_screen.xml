<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/content_bg_color"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/rl_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_button"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_curren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="@string/currency"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_16" />

                    <TextView
                        android:id="@+id/tv_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/currency"
                        android:textColor="@color/text_blue_2"
                        android:textSize="@dimen/text_size_sp_16"
                        android:visibility="gone" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_15"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/time"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_16"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_50"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"
                            android:text="@string/start_time"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_size_sp_14" />

                        <Space
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_1" />

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundTextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_34"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="2019-08-01"
                            android:textColor="@color/text_grey"
                            android:textColorHint="@color/text_grey_2"
                            android:textSize="@dimen/text_size_sp_14"
                            app:qmui_borderColor="@color/text_grey_3"
                            app:qmui_borderWidth="@dimen/dp_1"
                            app:qmui_isRadiusAdjustBounds="true"
                            app:qmui_radius="@dimen/dp_1" />

                    </LinearLayout>

                    <Space
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_10" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"
                            android:text="@string/end_time"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_size_sp_14" />

                        <Space
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_1" />

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundTextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_34"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="2019-08-01"
                            android:textColor="@color/text_grey"
                            android:textColorHint="@color/text_grey_2"
                            android:textSize="@dimen/text_size_sp_14"
                            app:qmui_borderColor="@color/text_grey_3"
                            app:qmui_borderWidth="@dimen/dp_1"
                            app:qmui_isRadiusAdjustBounds="true"
                            app:qmui_radius="@dimen/dp_1" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/label_assets_operation_type"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_16" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_15" />


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:background="@color/color_grey_3"
                android:text="@string/reset"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_sp_16" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:background="@color/color_default"
                android:text="@string/confirm"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_16"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_currency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_30"
            app:srcCompat="@drawable/icon_left_black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_30">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dp_45"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:src="@mipmap/img_search" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:hint="@string/search_currency"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_16" />
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            style="@style/line_french_grey"
            android:layout_below="@+id/iv_back"
            android:layout_marginTop="@dimen/dp_6" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_line"
            android:layout_marginTop="@dimen/dp_15" />
    </RelativeLayout>
</RelativeLayout>
