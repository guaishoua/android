<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_step_one"
                style="@style/person_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_4"
                        android:text="@string/label_assets_take_coin_note"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_sp_14" />

                    <Space
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_8" />

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                        android:id="@+id/tv_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_assets_take_coin_note"
                        android:inputType="text"
                        android:minHeight="@dimen/dp_45"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_sp_14"
                        app:qmui_underline_anim="true"
                        app:qmui_underline_focuscolor="@color/color_black"
                        app:qmui_underline_unfocuscolor="@color/color_grey_4"
                        app:qmui_underline_width="@dimen/dp_1" />

                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_label_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_4"
                            android:text="@string/label_assets_take_coin_address"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_size_sp_14" />

                        <Space
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_8" />

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                            android:id="@+id/tv_select_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_assets_take_coin_address"
                            android:inputType="text"
                            android:minHeight="@dimen/dp_45"
                            android:maxLength="150"
                            android:paddingRight="@dimen/dp_80"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_size_sp_14"
                            app:qmui_underline_anim="true"
                            app:qmui_underline_focuscolor="@color/color_black"
                            app:qmui_underline_unfocuscolor="@color/color_grey_4"
                            app:qmui_underline_width="@dimen/dp_1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_add_address"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                            android:id="@+id/tv_add_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@mipmap/icon_btn_arrow_right"
                            android:drawablePadding="@dimen/dp_8"
                            android:text="@string/btn_assets_take_coin_manage_address"
                            android:textColor="@color/color_button"
                            android:textSize="@dimen/text_size_sp_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_12">

                        <com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout
                            android:id="@+id/btn_address_paste"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:gravity="center_vertical|left">

                            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:src="@mipmap/icon_asset_paste"
                                app:qmui_border_color="@color/color_transparent" />

                        </com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout>

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:background="@color/color_button" />


                        <com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout
                            android:id="@+id/btn_scan_qr_code"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:gravity="center_vertical|right">

                            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:src="@mipmap/icon_asset_scan_qrcode"
                                app:qmui_border_color="@color/color_transparent" />

                        </com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout>


                    </LinearLayout>
                </RelativeLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_15" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_4"
                            android:text="@string/label_assets_take_coin_amount"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_size_sp_14" />

                        <Space
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_8" />

                        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                            android:id="@+id/et_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/dp_45"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_assets_take_coin_amount"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_size_sp_14"
                            app:qmui_underline_anim="true"
                            app:qmui_underline_focuscolor="@color/color_black"
                            app:qmui_underline_unfocuscolor="@color/color_grey_4"
                            app:qmui_underline_width="@dimen/dp_1" />

                    </LinearLayout>

                    <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                        android:id="@+id/tv_amount_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_12"
                        android:text="@string/all"
                        android:textColor="@color/color_button"
                        android:textSize="@dimen/text_size_sp_14" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/dp_12"
                        tools:text="@string/paymentid" />

                    <EditText
                        android:id="@+id/et_paymentid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/color_transparent"
                        android:hint="PaymentID"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_grey_2"
                        android:textSize="@dimen/text_size_sp_16" />

                    <View
                        style="@style/line_grey_3"
                        android:layout_marginTop="@dimen/dp_8" />
                </LinearLayout>

                <Space
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_assets_cash_amount"
                                android:textColor="@color/text_grey_2"
                                android:textSize="@dimen/text_size_sp_14" />

                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/text_grey_2"
                                android:textSize="@dimen/text_size_sp_14" />
                        </LinearLayout>

                        <Space
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_assets_actual_amount"
                                android:textColor="@color/text_grey_2"
                                android:textSize="@dimen/text_size_sp_14" />

                            <TextView
                                android:id="@+id/tv_actual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/text_grey_2"
                                android:textSize="@dimen/text_size_sp_14" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_assets_trans_fee"
                                android:textColor="@color/text_grey_2"
                                android:textSize="@dimen/text_size_sp_14" />

                            <TextView
                                android:id="@+id/tv_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/text_grey_2"
                                android:textSize="@dimen/text_size_sp_14" />
                        </LinearLayout>

                        <Space
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_5" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_assets_at_least_amount"
                                android:textColor="@color/text_grey_2"
                                android:textSize="@dimen/text_size_sp_14" />

                            <TextView
                                android:id="@+id/tv_at_least_mount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/text_grey_2"
                                android:textSize="@dimen/text_size_sp_14" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                    android:id="@+id/bt_step"
                    style="@style/btn_gradient_blue"
                    android:layout_marginLeft="@dimen/dp_0"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_0"
                    android:text="@string/btn_assets_take_coin_confirm" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:padding="@dimen/dp_6"
                    android:text="@string/take_hint"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_12"
                    app:qmui_backgroundColor="@color/content_bg_color_grey"
                    app:qmui_isRadiusAdjustBounds="true"
                    app:qmui_radius="@dimen/dp_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_step_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trade_password"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <Space
                    android:layout_width="1px"
                    android:layout_height="@dimen/dp_25" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                    android:id="@+id/et_pwd"
                    style="@style/common_edit_style"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_assets_take_coin_enter_pwd"
                    android:inputType="textPassword"
                    android:paddingRight="@dimen/dp_5" />

                <View
                    style="@style/line_grey_3"
                    android:layout_marginTop="@dimen/dp_8" />

                <Space
                    android:layout_width="1px"
                    android:layout_height="@dimen/dp_40" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_assets_take_coin_choose_verify_option"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14" />

                    <Space
                        android:layout_width="1px"
                        android:layout_height="@dimen/dp_25" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/cb_phone_mode"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_4"
                            android:background="@drawable/checkbox_circle_default"
                            android:button="@null"
                            android:checked="true"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10" />

                        <TextView
                            style="@style/common_edit_style"
                            android:layout_width="@dimen/dp_90"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_15"
                            android:text="@string/label_assets_take_coin_verify_by_phone"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_sp_14" />

                        <RadioButton
                            android:id="@+id/cb_email_mode"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_4"
                            android:background="@drawable/checkbox_circle_default"
                            android:button="@null"
                            android:checked="false"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10" />

                        <TextView
                            style="@style/common_edit_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_gender"
                            android:text="@string/label_assets_take_coin_verify_by_email"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_sp_14" />
                    </RadioGroup>
                </LinearLayout>

                <Space
                    android:layout_width="1px"
                    android:layout_height="@dimen/dp_25" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/et_email_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_transparent"
                        android:hint="@string/take_verify_code"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_grey_2"
                        android:textSize="@dimen/text_size_sp_16" />

                    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                        android:id="@+id/btn_email_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:text="@string/get_sms_code"
                        android:textColor="@color/color_default"
                        android:textSize="@dimen/text_size_sp_14"
                        android:visibility="gone" />

                    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                        android:id="@+id/btn_phone_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:text="@string/btn_assets_take_coin_obtain_pass_code"
                        android:textColor="@color/color_blue_2"
                        android:textSize="@dimen/text_size_sp_14"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    style="@style/line_grey_3"
                    android:layout_marginTop="@dimen/dp_8" />

                <Space
                    android:layout_width="1px"
                    android:layout_height="@dimen/dp_40" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/google_auth"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <EditText
                    android:id="@+id/et_google_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/color_transparent"
                    android:hint="@string/hint_assets_take_coin_enter_google_code"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_16" />

                <View
                    style="@style/line_grey_3"
                    android:layout_marginTop="@dimen/dp_8" />

                <Space
                    android:layout_width="1px"
                    android:layout_height="@dimen/dp_25" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                    android:id="@+id/bt_two_submit"
                    style="@style/btn_gradient_blue"
                    android:layout_marginLeft="@dimen/dp_0"
                    android:layout_marginRight="@dimen/dp_0"
                    android:text="@string/sure" />

                <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                    android:id="@+id/bt_above"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:text="@string/above_step"
                    android:visibility="gone"
                    android:textColor="@color/color_blue_2"
                    android:textSize="@dimen/text_size_sp_14" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:padding="@dimen/dp_6"
                    android:text="@string/take_hint"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_12"
                    app:qmui_backgroundColor="@color/content_bg_color_grey"
                    app:qmui_isRadiusAdjustBounds="true"
                    app:qmui_radius="@dimen/dp_1" />
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.NestedScrollView>
