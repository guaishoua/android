<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color"
    android:padding="@dimen/dp_15">

    <ImageView
        android:id="@+id/img_pay"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/img_yhk" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/img_pay"
        app:layout_constraintLeft_toRightOf="@+id/img_pay"
        app:layout_constraintTop_toTopOf="@+id/img_pay"
        tools:text="中国银行" />

    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/img_pay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_pay"
        app:srcCompat="@drawable/icon_arrow_right" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_pay"
        tools:text="加隆" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="?attr/qmui_common_list_item_switch"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@id/tv_user"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user"
        tools:text="111111******222222" />
</android.support.constraint.ConstraintLayout>