<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/view_bind_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_8" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transfer_available2"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_14" />

                <TextView
                    android:id="@+id/tv_coin_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_14"
                    tools:text="--" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="@string/asset_num"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <EditText
                    android:id="@+id/et_amount"
                    style="@style/common_edit_style"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:textColorHint="@color/text_grey_3"
                    android:textSize="@dimen/text_size_sp_16" />

                <View
                    android:id="@+id/view_line"
                    style="@style/line_grey_3"
                    android:layout_marginTop="@dimen/dp_10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/asset_num"
                    android:textSize="@dimen/text_size_sp_14" />

                <EditText
                    android:id="@+id/et_amount_out"
                    style="@style/common_edit_style"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:textColorHint="@color/text_grey_3"
                    android:textSize="@dimen/text_size_sp_16" />

                <View
                    style="@style/line_grey_3"
                    android:layout_marginTop="@dimen/dp_8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/trade_password"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                    android:id="@+id/et_pwd"
                    style="@style/common_edit_style"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:hint="@string/trade_password"
                    android:inputType="textPassword"
                    android:paddingRight="@dimen/dp_5"
                    android:textColorHint="@color/text_grey_3" />

                <View
                    style="@style/line_grey_3"
                    android:layout_marginTop="@dimen/dp_8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/take_verify"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_phone_mode"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_4"
                            android:background="@drawable/checkbox_circle_yellow"
                            android:button="@null"
                            android:checked="true"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10" />

                        <TextView
                            style="@style/common_edit_style"
                            android:layout_width="@dimen/dp_90"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_2"
                            android:text="@string/mobile_phone_number_verification"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_sp_14" />

                        <RadioButton
                            android:id="@+id/rb_email_mode"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_4"
                            android:background="@drawable/checkbox_circle_yellow"
                            android:button="@null"
                            android:checked="false"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10" />

                        <TextView
                            style="@style/common_edit_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_gender"
                            android:text="@string/Mailbox_verification"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_sp_14" />
                    </RadioGroup>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">

                    <EditText
                        android:id="@+id/et_mode_code"
                        style="@style/common_edit_style"
                        android:layout_height="wrap_content"
                        android:hint="@string/take_verify_code"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColorHint="@color/text_grey_3"
                        android:textSize="@dimen/text_size_sp_16" />

                    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                        android:id="@+id/btn_email_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:text="@string/email_code"
                        android:textColor="@color/color_blue_2"
                        android:textSize="@dimen/text_size_sp_14"
                        android:visibility="gone" />

                    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                        android:id="@+id/btn_phone_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:text="@string/email_code"
                        android:textColor="@color/color_blue_2"
                        android:textSize="@dimen/text_size_sp_14"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    style="@style/line_grey_3"
                    android:layout_marginTop="@dimen/dp_8" />

                <LinearLayout
                    android:id="@+id/ll_googlecode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="@string/google_auth"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_sp_14" />

                    <EditText
                        android:id="@+id/et_google_code"
                        style="@style/common_edit_style"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:hint="@string/take_verify_code"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColorHint="@color/text_grey_3"
                        android:textSize="@dimen/text_size_sp_16" />

                    <View
                        style="@style/line_grey_3"
                        android:layout_marginTop="@dimen/dp_8" />
                </LinearLayout>
            </LinearLayout>

            <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                android:id="@+id/qmuibt_confrim_transfer"
                style="@style/btn_gradient_blue"
                android:layout_margin="@dimen/dp_15"
                android:text="@string/confirm"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
