<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14"
        tools:text="充币" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@+id/tv_status"
        android:text="@string/success2"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14" />

    <TextView
        android:id="@+id/tv_coins_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14"
        tools:text="+333333.22222211USDT" />

    <TextView
        android:id="@+id/tv_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_status"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_grey_4"
        android:textSize="@dimen/text_size_sp_14"
        tools:text="手续费" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_status"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey_2"
            android:textSize="@dimen/text_size_sp_14"
            tools:text="2018-22-11 12:11" />

        <CheckBox
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@drawable/checkbox_record"
            android:button="@null" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        style="@style/line_both_grey_15"
        android:layout_below="@+id/tv_fee"
        android:background="@color/content_bg_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/content_bg_color_grey"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_coins_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_6"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_12"
            tools:text="地址:fdsfdsfdsfdsfdsfsdfdsfdsfdsfdsffdsfdsfssssssssdsfdsfddsfdsf" />

        <TextView
            android:id="@+id/tv_txid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:lineSpacingExtra="@dimen/dp_6"
            android:singleLine="true"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_12"
            tools:text="TxID：sssssssssssss" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:background="@color/content_bg_color_grey"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:visibility="visible"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12"
                tools:text="支付币种：TCL" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12"
                tools:text="所得币种：TCL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12"
                tools:text="所得币种数量：122226.89012312" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="right"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12"
                tools:text="所得币种数量：122226.89012312" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>