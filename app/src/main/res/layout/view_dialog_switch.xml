<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/color_transparent">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            app:qmui_backgroundColor="@color/color_white"
            app:qmui_radius="@dimen/dp_10">

            <com.dingxiang.mobile.captcha.DXCaptchaView
                android:id="@+id/dxCaptcha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16" />
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/rl_switch_close"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            app:qmui_backgroundColor="@color/color_white"
            app:qmui_borderColor="@color/color_E5E5E5"
            app:qmui_borderWidth="@dimen/dp_1"
            app:qmui_isRadiusAdjustBounds="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_close" />
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
    </RelativeLayout>
</RelativeLayout>
