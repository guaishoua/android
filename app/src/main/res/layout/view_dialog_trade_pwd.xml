<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dialog">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
        android:id="@+id/edit_trade_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginHorizontal="@dimen/dp_2"
        android:background="@null"
        android:gravity="left|center_vertical"
        android:hint="@string/please_input_trade_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingRight="@dimen/dp_5"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_grey"
        android:textSize="@dimen/text_size_sp_13"
        app:qmui_borderColor="@color/color_grey"
        app:qmui_borderWidth="@dimen/dp_1"
        app:qmui_radius="@dimen/dp_3" />
</LinearLayout>