<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_5">

    <TextView
        android:id="@+id/tv_buyorSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/text_size_sp_14"
        tools:text="买入" />

    <TextView
        android:id="@+id/tv_coins_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintLeft_toRightOf="@id/tv_buyorSell"
        tools:text="BTC/CODE" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="已成交" />

    <TextView
        android:id="@+id/tv_date_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="left"
        android:text="@string/date"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_entrustment_price_title"
        app:layout_constraintTop_toBottomOf="@id/tv_buyorSell" />

    <TextView
        android:id="@+id/tv_entrustment_price_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="right"
        android:text="@string/entrustment_price"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_date_title"
        app:layout_constraintRight_toLeftOf="@+id/tv_entrustment_number_title"
        app:layout_constraintTop_toTopOf="@+id/tv_date_title" />

    <TextView
        android:id="@+id/tv_entrustment_number_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/entrustment_number"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_entrustment_price_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_date_title" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_entrustment_price"
        app:layout_constraintTop_toBottomOf="@id/tv_date_title"
        tools:text="07-06 12:33" />

    <TextView
        android:id="@+id/tv_entrustment_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_date"
        app:layout_constraintRight_toLeftOf="@+id/tv_entrustment_number"
        app:layout_constraintTop_toTopOf="@+id/tv_date"
        tools:text="0.999999" />

    <TextView
        android:id="@+id/tv_entrustment_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_entrustment_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_date"
        tools:text="100.2" />

    <TextView
        android:id="@+id/tv_deal_all_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="left"
        android:text="@string/deal_all_amount"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_deal_avg_title"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />

    <TextView
        android:id="@+id/tv_deal_avg_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="right"
        android:text="@string/transaction_amount"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_deal_all_title"
        app:layout_constraintRight_toLeftOf="@+id/tv_deal_number_title"
        app:layout_constraintTop_toTopOf="@+id/tv_deal_all_title" />

    <TextView
        android:id="@+id/tv_deal_number_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/vol"
        android:textColor="@color/text_grey_3"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_deal_avg_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_deal_all_title" />

    <TextView
        android:id="@+id/tv_deal_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_deal_avg"
        app:layout_constraintTop_toBottomOf="@id/tv_deal_all_title"
        tools:text="100.00" />

    <TextView
        android:id="@+id/tv_deal_avg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_deal_all"
        app:layout_constraintRight_toLeftOf="@+id/tv_deal_number"
        app:layout_constraintTop_toTopOf="@+id/tv_deal_all"
        tools:text="100.00" />

    <TextView
        android:id="@+id/tv_deal_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_deal_avg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_deal_all"
        tools:text="100.00" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/color_grey_3"
        app:layout_constraintTop_toBottomOf="@id/tv_deal_all" />
</android.support.constraint.ConstraintLayout>