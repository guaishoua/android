<?xml version="1.0" encoding="utf-8"?>

<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:elevation="@dimen/dp_10"
    android:padding="@dimen/dp_1"
    app:qmui_backgroundColor="@color/content_bg_color"
    app:qmui_radius="@dimen/dp_5">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="TransitionsImageview"
            app:layout_constraintTop_toTopOf="parent">

            <com.shehuan.niv.NiceImageView
                android:id="@+id/img_coin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:corner_top_left_radius="@dimen/dp_5"
                app:corner_top_right_radius="@dimen/dp_5"
                app:layout_constraintDimensionRatio="W,9:16"
                app:layout_constraintTop_toTopOf="parent" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                android:id="@+id/rl_status"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_coin"
                app:qmui_backgroundColor="@color/color_status_ing"
                app:qmui_radiusBottomLeft="@dimen/dp_3"
                app:qmui_radiusBottomRight="@dimen/dp_3">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_sp_10"
                    android:textStyle="bold"
                    tools:text="进行中" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:background="@color/content_bg_color_grey"
            app:layout_constraintBottom_toBottomOf="@id/layout_img">

            <TextView
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_10" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            app:layout_constraintTop_toBottomOf="@id/layout_img">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0.1BTC" />

            <TextView
                android:id="@+id/tv_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                tools:text="币种介绍" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:gravity="center"
                android:text="@string/auction_list_paynow"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:qmui_backgroundColor="@color/color_pay_now"
                app:qmui_radiusBottomLeft="@dimen/dp_5"
                app:qmui_radiusBottomRight="@dimen/dp_5" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                android:id="@+id/layout_name1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                app:layout_constraintBottom_toTopOf="@id/pay"
                app:qmui_backgroundColor="@color/content_bg_color_grey"
                app:qmui_radiusBottomLeft="@dimen/dp_5"
                app:qmui_radiusBottomRight="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_left_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    tools:text="555" />

                <TextView
                    android:id="@+id/tv_right_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    android:visibility="gone"
                    tools:text="666" />

                <TextView
                    android:id="@+id/tv_right_top_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    android:visibility="visible"
                    tools:text="666" />

                <TextView
                    android:id="@+id/tv_right_bottom_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    android:visibility="visible"
                    tools:text="666" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

            <View
                android:id="@+id/view_line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/content_bg_color"
                app:layout_constraintBottom_toTopOf="@+id/layout_name1" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_name2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintBottom_toTopOf="@+id/view_line1">

                <TextView
                    android:id="@+id/tv_left_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="333" />

                <TextView
                    android:id="@+id/tv_right_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    app:layout_constraintBottom_toBottomOf="@id/tv_left_name2"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="444" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/view_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/content_bg_color"
                app:layout_constraintBottom_toTopOf="@+id/layout_name2" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_name3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintBottom_toTopOf="@+id/view_line2">

                <TextView
                    android:id="@+id/tv_left_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="111" />

                <TextView
                    android:id="@+id/tv_right_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="222" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/view_line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/content_bg_color"
                app:layout_constraintBottom_toTopOf="@+id/layout_name3" />

            <ImageView
                android:id="@+id/img_whitepaper"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:src="@drawable/icon_white_pager"
                app:layout_constraintBottom_toTopOf="@id/view_line3"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_whitepaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/auction_list_whitepaper"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/img_whitepaper"
                app:layout_constraintLeft_toRightOf="@id/img_whitepaper" />
        </android.support.constraint.ConstraintLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/view_hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_25"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:qmui_backgroundColor="@color/white_40"
            app:qmui_radiusTopLeft="@dimen/dp_5"
            app:qmui_radiusTopRight="@dimen/dp_5" />
    </android.support.constraint.ConstraintLayout>
</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>