<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_40">

            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/img_chex" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_40"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_num_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/dp_140"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    tools:text="可用數量：" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_profit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/dp_140"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    tools:text="平台昨日單節點收益：" />

                <TextView
                    android:id="@+id/tv_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0000"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/dp_140"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    tools:text="開始收益日期：" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@null"
                android:digits="0123456789"
                android:inputType="number"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_grey_3"
                android:textSize="@dimen/text_size_sp_16" />

            <View style="@style/line_french_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/node_scale"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/node_pwd"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@null"
                android:inputType="textPassword"
                android:paddingRight="@dimen/dp_5"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_grey_3"
                android:textSize="@dimen/text_size_sp_16" />

            <View style="@style/line_french_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_node_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tv_node_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:text="@string/node_agress"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_12" />
            </LinearLayout>

            <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                android:id="@+id/qmuibt_ok"
                style="@style/btn_gradient_blue"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_16" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundTextView
                android:id="@+id/tv_node_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:lineSpacingExtra="@dimen/dp_6"
                android:padding="@dimen/dp_8"
                android:text="@string/node_hint"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12"
                app:qmui_backgroundColor="@color/content_bg_color_grey"
                app:qmui_isRadiusAdjustBounds="true"
                app:qmui_radius="@dimen/dp_2" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>