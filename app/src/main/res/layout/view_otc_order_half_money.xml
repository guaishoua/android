<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:paddingLeft="@dimen/dp_8"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_radius="@dimen/dp_3">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/img_people"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:qmui_border_width="@dimen/dp_0"
            app:qmui_is_circle="true" />

        <TextView
            android:id="@+id/tv_people_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_15"
            app:layout_constraintBottom_toBottomOf="@id/img_people"
            app:layout_constraintLeft_toRightOf="@id/img_people"
            app:layout_constraintTop_toTopOf="@id/img_people"
            tools:text="加隆" />

        <ImageView
            android:id="@+id/img_people_vip"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="@id/tv_people_nickname"
            app:layout_constraintLeft_toRightOf="@id/tv_people_nickname"
            app:layout_constraintTop_toTopOf="@id/tv_people_nickname"
            tools:srcCompat="@drawable/icon_vip" />

        <ImageView
            android:id="@+id/img_people_phone_auth"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_people"
            tools:srcCompat="@drawable/icon_auth_success" />

        <TextView
            android:id="@+id/tv_people_phone_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/phone_auth"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12"
            app:layout_constraintBottom_toBottomOf="@id/img_people_phone_auth"
            app:layout_constraintLeft_toRightOf="@id/img_people_phone_auth"
            app:layout_constraintTop_toTopOf="@id/img_people_phone_auth" />

        <ImageView
            android:id="@+id/img_people_truenname_auth"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="@id/img_people_phone_auth"
            app:layout_constraintLeft_toRightOf="@id/tv_people_phone_auth"
            tools:srcCompat="@drawable/icon_auth_success" />

        <TextView
            android:id="@+id/tv_people_truenname_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/truename_auth"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12"
            app:layout_constraintBottom_toBottomOf="@id/img_people_truenname_auth"
            app:layout_constraintLeft_toRightOf="@id/img_people_truenname_auth"
            app:layout_constraintTop_toTopOf="@id/img_people_truenname_auth" />

        <ImageView
            android:id="@+id/img_people_email_auth"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_people_phone_auth"
            tools:srcCompat="@drawable/icon_auth_success" />

        <TextView
            android:id="@+id/tv_people_email_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/email_auth"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12"
            app:layout_constraintBottom_toBottomOf="@id/img_people_email_auth"
            app:layout_constraintLeft_toRightOf="@id/img_people_email_auth"
            app:layout_constraintTop_toTopOf="@id/img_people_email_auth" />

        <ImageView
            android:id="@+id/img_people_video_auth"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="@id/img_people_email_auth"
            app:layout_constraintLeft_toRightOf="@id/tv_people_email_auth"
            tools:srcCompat="@drawable/icon_auth_failure" />

        <TextView
            android:id="@+id/tv_people_video_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/truename_auth"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_12"
            app:layout_constraintBottom_toBottomOf="@id/img_people_video_auth"
            app:layout_constraintLeft_toRightOf="@id/img_people_video_auth"
            app:layout_constraintTop_toTopOf="@id/img_people_video_auth" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/rl_people_bg"
            android:layout_width="@dimen/dp_25"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:qmui_backgroundColor="@color/color_otc_sell_bg"
            app:qmui_radiusBottomRight="@dimen/dp_3"
            app:qmui_radiusTopRight="@dimen/dp_3" />

        <TextView
            android:id="@+id/tv_people_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:textColor="@color/color_otc_sell"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_people_video_auth"
            app:layout_constraintRight_toLeftOf="@+id/rl_people_bg"
            tools:text="34000ACU" />

        <TextView
            android:id="@+id/tv_people_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sell_pay"
            android:textColor="@color/color_otc_sell"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintBottom_toTopOf="@id/tv_people_pay"
            app:layout_constraintRight_toRightOf="@id/tv_people_pay" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundConstraintLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:orientation="vertical"
        android:padding="@dimen/dp_8"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_radius="@dimen/dp_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_bond_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bond"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_bond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bond_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tv_all_deal_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/all_deal_amount"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bond_title" />

                <TextView
                    android:id="@+id/tv_all_deal_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_all_deal_amount_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tv_buy_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/buy_amount"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_all_deal_amount_title" />

                <TextView
                    android:id="@+id/tv_buy_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_buy_amount_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tv_sell_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/sell_amount"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_buy_amount_title" />

                <TextView
                    android:id="@+id/tv_sell_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sell_amount_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tv_deal_rate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/deal_rate"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sell_amount_title" />

                <TextView
                    android:id="@+id/tv_deal_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_deal_rate_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_dispute_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dispute_amount"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_dispute_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_dispute_amount_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tv_be_arbitrated_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/be_arbitrated_amount"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dispute_amount_title" />

                <TextView
                    android:id="@+id/tv_be_arbitrated_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_be_arbitrated_amount_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tv_arbitration_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/arbitration_amount"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_be_arbitrated_amount_title" />

                <TextView
                    android:id="@+id/tv_arbitration_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_arbitration_amount_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tv_appeal_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/arbitration_amount"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_arbitration_amount_title" />

                <TextView
                    android:id="@+id/tv_appeal_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_appeal_amount_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tv_win_lawsuit_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/arbitration_amount"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_appeal_amount_title" />

                <TextView
                    android:id="@+id/tv_win_lawsuit_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_win_lawsuit_amount_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="100" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_average_payment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/average_payment_time"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</LinearLayout>