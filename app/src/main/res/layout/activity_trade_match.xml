<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/common_titlebar"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_match_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_match_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_60"
            android:includeFontPadding="false"
            android:text="@string/match_title1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_match_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/match_title2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_35"
            app:layout_constraintLeft_toLeftOf="@id/tv_match_title1"
            app:layout_constraintTop_toBottomOf="@+id/tv_match_title1" />

        <TextView
            android:id="@+id/tv_match_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/match_title3"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_35"
            app:layout_constraintLeft_toLeftOf="@id/tv_match_title2"
            app:layout_constraintTop_toBottomOf="@+id/tv_match_title2" />

        <ImageView
            android:id="@+id/img_tag1"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_25"
            android:scaleType="fitXY"
            android:src="@mipmap/img_match_tag1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_match_title3" />

        <TextView
            android:id="@+id/tv_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/match_tag1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_20"
            app:layout_constraintLeft_toLeftOf="@id/img_tag1"
            app:layout_constraintTop_toBottomOf="@id/img_tag1" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/img_match_flag"
            app:layout_constraintBottom_toBottomOf="@id/tv_tag1"
            app:layout_constraintLeft_toRightOf="@id/tv_tag1"
            app:layout_constraintTop_toTopOf="@id/tv_tag1" />

        <TextView
            android:id="@+id/tv_tag1_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="@string/match_tag1_text1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag1"
            app:layout_constraintTop_toBottomOf="@id/tv_tag1" />

        <TextView
            android:id="@+id/tv_tag1_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_37"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp_0.5"
            android:text="@string/match_tag1_text2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_12"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag1_text1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tag1_text1" />

        <TextView
            android:id="@+id/tv_tag1_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:includeFontPadding="false"
            android:text="@string/match_tag1_text3"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag1_text2"
            app:layout_constraintTop_toBottomOf="@id/tv_tag1_text2" />

        <TextView
            android:id="@+id/tv_tag1_text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="@string/match_tag1_text4"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_11"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag1_text3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tag1_text3" />

        <TextView
            android:id="@+id/tv_tag1_text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:includeFontPadding="false"
            android:text="@string/match_tag1_text5"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag1_text4"
            app:layout_constraintTop_toBottomOf="@id/tv_tag1_text4" />

        <LinearLayout
            android:id="@+id/lin_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_tag1_text5">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundTextView
                android:id="@+id/tv_hour"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:gravity="center"
                android:textColor="#2D0889"
                android:textSize="@dimen/text_size_sp_25"
                app:qmui_backgroundColor="@color/color_white"
                app:qmui_radius="@dimen/dp_3"
                tools:text="00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:text="@string/hour"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_9" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundTextView
                android:id="@+id/tv_minute"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:gravity="center"
                android:textColor="#2D0889"
                android:textSize="@dimen/text_size_sp_25"
                app:qmui_backgroundColor="@color/color_white"
                app:qmui_radius="@dimen/dp_3"
                tools:text="00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:text="@string/minute"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_9" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundTextView
                android:id="@+id/tv_second"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:gravity="center"
                android:textColor="#2D0889"
                android:textSize="@dimen/text_size_sp_25"
                app:qmui_backgroundColor="@color/color_white"
                app:qmui_radius="@dimen/dp_3"
                tools:text="00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:text="@string/second1"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_9" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_tag2"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_35"
            android:scaleType="fitXY"
            android:src="@mipmap/img_match_tag2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lin_time" />

        <TextView
            android:id="@+id/tv_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/match_tag2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_20"
            app:layout_constraintLeft_toLeftOf="@id/img_tag2"
            app:layout_constraintTop_toBottomOf="@id/img_tag2" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/img_match_flag"
            app:layout_constraintBottom_toBottomOf="@id/tv_tag2"
            app:layout_constraintLeft_toRightOf="@id/tv_tag2"
            app:layout_constraintTop_toTopOf="@id/tv_tag2" />

        <TextView
            android:id="@+id/tv_tag2_text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_35"
            android:includeFontPadding="false"
            android:text="@string/match_tag2_text1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tag2" />

        <TextView
            android:id="@+id/tv_tag2_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_35"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp_8"
            android:text="@string/match_tag2_text2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag2_text1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tag2_text1" />

        <TextView
            android:id="@+id/tv_tag2_text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp_8"
            android:text="@string/match_tag2_text3"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag2_text2"
            app:layout_constraintTop_toBottomOf="@id/tv_tag2_text2" />

        <TextView
            android:id="@+id/tv_tag2_text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_35"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp_8"
            android:text="@string/match_tag2_text4"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag2_text3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tag2_text3" />

        <ImageView
            android:id="@+id/img_tag3"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_40"
            android:scaleType="fitXY"
            android:src="@mipmap/img_match_tag3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tag2_text4" />

        <TextView
            android:id="@+id/tv_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/match_tag3"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_20"
            app:layout_constraintLeft_toLeftOf="@id/img_tag3"
            app:layout_constraintTop_toBottomOf="@id/img_tag3" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/img_match_flag"
            app:layout_constraintBottom_toBottomOf="@id/tv_tag3"
            app:layout_constraintLeft_toRightOf="@id/tv_tag3"
            app:layout_constraintTop_toTopOf="@id/tv_tag3" />

        <LinearLayout
            android:id="@+id/lin_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_37"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/tv_tag3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tag3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text1"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text2"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text3"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text4"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text5"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text6"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_37"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/lin_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lin_view">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text7"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text8"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text9"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text10"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text11"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text12"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_20"
                android:includeFontPadding="false"
                android:text="@string/match_tag3_text13"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_12" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>