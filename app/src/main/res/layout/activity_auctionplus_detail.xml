<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color">

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/content_bg_color_grey"
        app:layout_constraintTop_toBottomOf="@id/title">

        <TextView
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="00:00:00"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sp_14" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_time">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/content_bg_color"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="TransitionsImageview"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_coin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="W,9:16"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                    android:id="@+id/rl_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_15"
                    app:layout_constraintLeft_toLeftOf="@id/img_coin"
                    app:layout_constraintTop_toTopOf="@id/img_coin"
                    app:qmui_backgroundColor="@color/color_status_ing"
                    app:qmui_radiusBottomLeft="@dimen/dp_5"
                    app:qmui_radiusBottomRight="@dimen/dp_5">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:includeFontPadding="false"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_size_sp_12"
                        android:textStyle="bold"
                        tools:text="进行中" />
                </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_img"
                tools:text="0.1BTC" />

            <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintWidth_percent=".6"
                app:zpb_bg_color="@color/color_grey_3"
                app:zpb_gradient_from="@color/color_default"
                app:zpb_gradient_to="@color/color_default"
                app:zpb_max="100"
                app:zpb_open_gradient="true"
                app:zpb_padding="0dp"
                app:zpb_progress="30"
                app:zpb_round_rect_radius="@dimen/dp_12"
                app:zpb_show_mode="round_rect" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/text_auction_currentprice"
                android:textSize="@dimen/text_size_sp_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_line"
                app:layout_constraintRight_toLeftOf="@+id/tv_line"
                tools:text="111" />

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="/"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress" />

            <TextView
                android:id="@+id/tv_allcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="@dimen/dp_1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/tv_line"
                app:layout_constraintLeft_toRightOf="@id/tv_line"
                tools:text="1000次" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                android:id="@+id/btn_trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="@dimen/dp_10"
                android:text="@string/trade"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_count" />

            <com.qmuiteam.qmui.alpha.QMUIAlphaButton
                android:id="@+id/btn_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="@dimen/dp_10"
                android:text="@string/recharge"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_count" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_now"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/auction_now_goprice"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_count"
                app:qmui_backgroundColor="@color/color_pay_now"
                app:qmui_isRadiusAdjustBounds="true" />

            <TextView
                android:id="@+id/tv_collection_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_trade"
                tools:text="收藏1000人" />

            <TextView
                android:id="@+id/tv_goprice_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_10"
                app:layout_constraintBottom_toBottomOf="@id/tv_collection_num"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                tools:text="出价1000人" />

            <TextView
                android:id="@+id/tv_watch_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_10"
                app:layout_constraintBottom_toBottomOf="@id/tv_goprice_num"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="围观1000人" />

            <View
                android:id="@+id/view_line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_collection_num" />

            <TextView
                android:id="@+id/tv_every_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/plus_every_num"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_count_time"
                app:layout_constraintTop_toBottomOf="@+id/view_line1" />

            <TextView
                android:id="@+id/tv_count_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/auction_count_time"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="@id/tv_every_num"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/tv_every_num"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_every_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/plus_every_price"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_fee"
                app:layout_constraintTop_toBottomOf="@+id/tv_every_num" />

            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/plus_fee"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="@id/tv_every_price"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/tv_every_price"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_all_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/auctionplus_all_time"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_add_price"
                app:layout_constraintTop_toBottomOf="@+id/tv_every_price" />

            <TextView
                android:id="@+id/tv_add_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/plus_add_price"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintBottom_toBottomOf="@id/tv_all_num"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/tv_all_num"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/view_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_all_num" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/view_rules"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/view_line2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/auction_rules"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_expand_more_grey" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_rules_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/plus_rules"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_10"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/view_rules" />

            <View
                android:id="@+id/view_line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_rules_details" />

            <TextView
                android:id="@+id/tv_goprice_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/auction_goprice_record"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_line3" />

            <ImageView
                android:id="@+id/img_goprice_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="@id/tv_goprice_record"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/icon_more" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constrain_list_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/content_bg_color_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_goprice_record">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="left"
                    android:text="ID"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_fee1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_fee1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fee"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    app:layout_constraintBottom_toBottomOf="@id/tv_id"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@id/tv_id"
                    app:layout_constraintRight_toLeftOf="@+id/tv_bonus" />

                <TextView
                    android:id="@+id/tv_bonus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bonus"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    app:layout_constraintBottom_toBottomOf="@id/tv_id"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@id/tv_fee1"
                    app:layout_constraintRight_toLeftOf="@+id/tv_location" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="right"
                    android:text="@string/location"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_10"
                    app:layout_constraintBottom_toBottomOf="@id/tv_id"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@id/tv_bonus"
                    app:layout_constraintRight_toRightOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                app:layout_constraintTop_toBottomOf="@id/constrain_list_title" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>