<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_6">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/node_total"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_total_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/tv_total"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            android:textStyle="bold"
            tools:text="11CHEX" />

        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow_right_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_weight="1.05"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/node_num"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:id="@+id/tv_node_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                android:textStyle="bold"
                tools:text="112345678" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/node_create"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:id="@+id/tv_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                android:textStyle="bold"
                tools:text="2018-22-11 19:22:22" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/node_unlock_num2"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:id="@+id/tv_unlock_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                android:textStyle="bold"
                tools:text="1123456789" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center_horizontal"
                android:text="@string/node_create_profit"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:id="@+id/tv_create_profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                android:textStyle="bold"
                tools:text="2017-22-22" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/node_yesterday"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:id="@+id/tv_yesterday_profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="right"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_12"
                android:textStyle="bold"
                tools:text="11" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/text_grey_3" />
</LinearLayout>
