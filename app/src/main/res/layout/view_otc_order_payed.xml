<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_10"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_radius="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_countdown_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="@string/payed_time_countdown"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_countdown"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_3"
            app:layout_constraintBottom_toBottomOf="@id/tv_countdown_title"
            app:layout_constraintLeft_toRightOf="@id/tv_countdown_title"
            app:srcCompat="@drawable/icon_clock" />

        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/color_otc_countdown"
            android:textSize="@dimen/text_size_sp_16"
            app:layout_constraintBottom_toBottomOf="@id/img_countdown"
            app:layout_constraintLeft_toRightOf="@id/img_countdown"
            tools:text="00:22:22" />

        <TextView
            android:id="@+id/tv_order_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:text="@string/order_id"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_countdown_title" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_order_id_title"
            app:layout_constraintLeft_toRightOf="@id/tv_order_id_title"
            tools:text="HDFAJDFJA" />

        <TextView
            android:id="@+id/tv_need_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:text="@string/current_trade_need_pay"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_id_title" />

        <TextView
            android:id="@+id/tv_need_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_need_pay_title"
            app:layout_constraintLeft_toRightOf="@id/tv_need_pay_title"
            tools:text="100" />

        <TextView
            android:id="@+id/tv_pay_method_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:text="@string/pay_method"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_need_pay_title" />

        <TextView
            android:id="@+id/tv_pay_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_pay_method_title"
            app:layout_constraintLeft_toRightOf="@id/tv_pay_method_title"
            tools:text="微信支付" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundConstraintLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:id="@+id/lin_pay_wz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_10"
        android:visibility="gone"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_radius="@dimen/dp_3">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundImageView
            android:id="@+id/img_payment_code"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:scaleType="fitCenter"
            app:qmui_corner_radius="@dimen/dp_3" />

        <TextView
            android:id="@+id/tv_payment_code_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_10"
            tools:text="@string/please_scan_with_wx" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:id="@+id/lin_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_radius="@dimen/dp_3">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:paddingHorizontal="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_cardholder_name_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/cardholder_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_cardholder_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_22"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_cardholder_name_title1"
                app:layout_constraintLeft_toRightOf="@id/tv_cardholder_name_title1"
                app:layout_constraintTop_toTopOf="@id/tv_cardholder_name_title1"
                tools:text="加隆" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@color/content_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/bank_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_22"
                android:background="@null"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@color/content_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/open_bank_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_open_bank_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_22"
                android:background="@null"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@color/content_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/open_bank_address"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_open_bank_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_22"
                android:background="@null"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@color/content_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/bank_id"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />

            <TextView
                android:id="@+id/tv_bank_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_16" />
        </LinearLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_10"
        app:qmui_backgroundColor="@color/content_bg_color"
        app:qmui_radius="@dimen/dp_3">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
            android:id="@+id/lin_upload"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintDimensionRatio="W,1:2.3"
            app:layout_constraintTop_toTopOf="parent"
            app:qmui_borderColor="@color/color_grey"
            app:qmui_borderWidth="@dimen/dp_1"
            app:qmui_radius="@dimen/dp_2">

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                app:srcCompat="@drawable/icon_add_grey" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="@string/upload_img_tip"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_sp_14" />

            <ImageView
                android:id="@+id/img_url"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:visibility="gone" />
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_pay"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/confirm_and_pay"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lin_upload"
            app:layout_constraintWidth_percent="0.48"
            app:qmui_backgroundColor="@color/color_default"
            app:qmui_radius="@dimen/dp_3" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_giveup"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:text="@string/giveup_pay"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_sp_14"
            app:layout_constraintBottom_toBottomOf="@id/btn_pay"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.48"
            app:qmui_backgroundColor="@color/color_otc_giveup"
            app:qmui_radius="@dimen/dp_3" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundConstraintLayout>
</LinearLayout>