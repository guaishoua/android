<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_buy_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="买入100单 / 卖出100单" />

    <TextView
        android:id="@+id/tv_real_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_buy_sell"
        tools:text="@string/real_time_price" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_gointo_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_5"
        android:text="@string/gointo_market"
        android:textColor="@color/text_default"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_real_price"
        app:layout_constraintRight_toRightOf="parent"
        app:qmui_borderColor="@color/text_default"
        app:qmui_borderWidth="@dimen/dp_0.5"
        app:qmui_radius="@dimen/dp_3" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/content_bg_color_grey"
        app:layout_constraintTop_toBottomOf="@id/tv_real_price" />

    <TextView
        android:id="@+id/tv_24h_range_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/range_24h"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_sp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line1" />

    <TextView
        android:id="@+id/tv_24h_maxprice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maxprice_24h"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_sp_13"
        app:layout_constraintBottom_toBottomOf="@id/tv_24h_range_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_24h_minprice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="@string/minprice_24h"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_sp_13"
        app:layout_constraintBottom_toBottomOf="@id/tv_24h_range_title"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_24h_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_riseup"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_24h_range_title"
        tools:text="7.00%" />

    <ImageView
        android:id="@+id/img_24h_range"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/tv_24h_range"
        app:layout_constraintLeft_toRightOf="@id/tv_24h_range"
        app:layout_constraintTop_toTopOf="@id/tv_24h_range"
        app:srcCompat="@drawable/icon_riseup" />

    <TextView
        android:id="@+id/tv_24h_maxprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_24h_range"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="100" />

    <TextView
        android:id="@+id/tv_24h_minprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_24h_range"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="3.33" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/content_bg_color_grey"
        app:layout_constraintTop_toBottomOf="@id/tv_24h_range" />

    <TextView
        android:id="@+id/tv_buy_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:text="@string/buy"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_sell_title"
        app:layout_constraintTop_toBottomOf="@id/view_line2" />

    <TextView
        android:id="@+id/tv_sell_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/sell"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_16"
        app:layout_constraintBottom_toBottomOf="@id/tv_buy_title"
        app:layout_constraintLeft_toRightOf="@id/tv_buy_title"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>