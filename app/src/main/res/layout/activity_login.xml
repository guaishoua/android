<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/img_loginbg" />

    <include
        android:id="@+id/title"
        layout="@layout/common_titlebar"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_120"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_80"
                android:src="@mipmap/img_logo_big"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_25"
                android:drawableLeft="@mipmap/img_mine_2"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:hint="@string/login_email_or_phone"
                android:inputType="textEmailAddress"
                android:maxLength="60"
                android:textColor="@color/text_white"
                android:textColorHint="@color/text_white"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_logo"
                app:qmui_underline_anim="true"
                app:qmui_underline_focuscolor="@color/color_white"
                app:qmui_underline_unfocuscolor="@color/color_white"
                app:qmui_underline_width="@dimen/dp_1" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundEditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_25"
                android:drawableLeft="@mipmap/icon_pwds"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingRight="@dimen/dp_5"
                android:textColor="@color/text_white"
                android:textColorHint="@color/text_white"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintTop_toBottomOf="@+id/et_email"
                app:qmui_underline_anim="true"
                app:qmui_underline_focuscolor="@color/color_white"
                app:qmui_underline_unfocuscolor="@color/color_white"
                app:qmui_underline_width="@dimen/dp_1" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@null"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintTop_toBottomOf="@+id/et_pwd"
                app:qmui_backgroundColor="@color/color_default"
                app:qmui_radius="@dimen/dp_2" />

            <TextView
                android:id="@+id/register_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/register_fast"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnLogin" />

            <TextView
                android:id="@+id/find_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_25"
                android:text="@string/forgot_password"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnLogin" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>