<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/view_bind_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_8" />

            <LinearLayout
                android:id="@+id/ll_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transfer_available2"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_14" />

                <TextView
                    android:id="@+id/tv_coin_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/text_size_sp_14"
                    tools:text="--" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="@string/asset_num"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <EditText
                    android:id="@+id/et_amount"
                    style="@style/common_edit_style"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:digits="0123456789."
                    android:inputType="number"
                    android:maxLength="20"
                    android:textColorHint="@color/text_grey_3"
                    android:textSize="@dimen/text_size_sp_16" />

                <View
                    style="@style/line_grey_3"
                    android:layout_marginTop="@dimen/dp_10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="@string/asset_num"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_sp_14" />

                <EditText
                    android:id="@+id/et_amount_out"
                    style="@style/common_edit_style"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:digits="0123456789."
                    android:inputType="number"
                    android:maxLength="20"
                    android:textColorHint="@color/text_grey_3"
                    android:textSize="@dimen/text_size_sp_16" />

                <View
                    style="@style/line_grey_3"
                    android:layout_marginTop="@dimen/dp_10" />
            </LinearLayout>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/qmuibt_confrim_transfer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="@dimen/dp_15"
                android:text="@string/confirm"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_sp_16"
                app:qmui_backgroundColor="@color/color_default"
                app:qmui_radius="@dimen/dp_3" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
