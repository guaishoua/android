<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/content_bg_color_grey"
                android:endColor="@color/content_bg_color_grey"
                android:startColor="@color/content_bg_color_grey" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dp" />
                <gradient
                    android:centerColor="@color/color_default_progress"
                    android:endColor="@color/color_default_progress"
                    android:startColor="@color/color_default_progress" />
            </shape>
        </clip>
    </item>
</layer-list>