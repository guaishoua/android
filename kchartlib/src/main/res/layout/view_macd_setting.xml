<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color_grey"
    android:orientation="vertical"
    android:paddingVertical="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_15">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/ed_macd_s"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_chart_grey"
                android:digits="0123456789"
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:maxLength="3"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="360" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="S"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintBottom_toBottomOf="@+id/ed_macd_s"
                app:layout_constraintLeft_toLeftOf="@+id/ed_macd_s"
                app:layout_constraintTop_toTopOf="@+id/ed_macd_s" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/ed_macd_l"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_chart_grey"
                android:digits="0123456789"
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:maxLength="3"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="360" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="L"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintBottom_toBottomOf="@+id/ed_macd_l"
                app:layout_constraintLeft_toLeftOf="@+id/ed_macd_l"
                app:layout_constraintTop_toTopOf="@+id/ed_macd_l" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/ed_macd_m"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_chart_grey"
                android:digits="0123456789"
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:maxLength="3"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="360" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="M"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_sp_16"
                app:layout_constraintBottom_toBottomOf="@+id/ed_macd_m"
                app:layout_constraintLeft_toLeftOf="@+id/ed_macd_m"
                app:layout_constraintTop_toTopOf="@+id/ed_macd_m" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_refresh_macd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/icon_refresh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/reset"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_sp_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/content_bg_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_15"
        android:text="@string/introduction"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_sp_18" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_15"
        android:text="@string/introduction_macd"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_sp_14" />
</LinearLayout>